rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======== HELPER FUNCTIONS ========
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      // Use exists() to prevent errors if the user doc doesn't exist yet.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    function isDispensaryOwner(dispensaryId) {
      // Use exists() for safety.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'DispensaryOwner' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }
    
    // ======== GLOBAL SUPER ADMIN OVERRIDE ========
    // This rule ensures a Super Admin can read/write ANYTHING, bypassing all other rules.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // ======== COLLECTION-SPECIFIC RULES ========

    match /dispensaries/{dispensaryId} {
      // Anyone can read a dispensary ONLY if its status is 'Approved'.
      // Super Admins can read any, due to the global override above.
      allow read: if resource.data.status == 'Approved';
      // Only Super Admins can create or update dispensaries.
      allow write: if isSuperAdmin();
    }

    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /stickersets/{setId} {
      allow read: if resource.data.isPublic == true || isOwner(resource.data.creatorUid) || isSuperAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(resource.data.creatorUid) || isSuperAdmin();
      allow delete: if isOwner(resource.data.creatorUid) || isSuperAdmin();
    }

    match /products/{productId} {
      // Anyone can read a product if its associated dispensary is approved.
      allow read: if exists(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)) &&
                   get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
                   
      // A dispensary owner can create a product for their own dispensary. Admins can create any.
      allow create: if isDispensaryOwner(request.resource.data.dispensaryId) || isSuperAdmin();
      
      // A dispensary owner can update/delete their own products. Admins can manage any.
      allow update, delete: if isDispensaryOwner(resource.data.dispensaryId) || isSuperAdmin();
    }

    match /users/{userId} {
      // A user can manage their own document. An admin can manage any.
      allow read, update: if isOwner(userId) || isSuperAdmin();
      // Anyone can create a user account (signup).
      allow create: if true;
      // Only admins can list or delete users.
      allow list, delete: if isSuperAdmin();
    }
    
    match /productRequests/{requestId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isSuperAdmin();
    }
    
    match /poolIssues/{issueId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSuperAdmin();
    }
    
    match /aiInteractionsLog/{logId} {
      allow read: if isOwner(resource.data.userId) || isSuperAdmin();
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Default deny for any collections not explicitly matched
  }
}