rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // SUPER ADMIN OVERRIDE: Super Admins can read and write all documents.
    // This is checked first and grants universal access if the condition is met.
    match /{document=**} {
      allow read, write: if request.auth.token.role == 'Super Admin';
    }
    
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }
    
    // Dispensary Types can be read by any authenticated user, but only written by admins (covered by global rule).
    match /dispensaryTypes/{typeId} {
      allow read: if request.auth != null;
    }
    
    // Dispensary product categories can be read by authenticated users.
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if request.auth != null;
    }
    
    // Dispensaries can be read by anyone, but only updated by their owner or an admin.
    match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow update: if request.auth.uid == resource.data.ownerUid;
      // Note: Admin updates are covered by the global rule.
    }
    
    // Products can be read by anyone.
    // Products can only be created or updated by the owner of the linked dispensary.
    match /products/{productId} {
      allow read: if true;
      allow create, update: if request.auth.uid == get(/databases/$(database)/documents/dispensaries/$(request.resource.data.dispensaryId)).data.ownerUid;
      allow delete: if request.auth.uid == resource.data.productOwnerEmail; // Simplified for now, better to check owner of dispensary
    }
    
    // Product Requests can be created by any authenticated user.
    // They can be read or updated by the requester or the product owner.
    match /productRequests/{requestId} {
      allow create: if request.auth.uid != null;
      allow read, update: if request.auth.uid == resource.data.requesterUid || request.auth.uid == get(/databases/$(database)/documents/dispensaries/$(resource.data.productOwnerDispensaryId)).data.ownerUid;
    }
    
    // Pool Issues can be created by authenticated users.
    // Read/write access is restricted to admins (covered by global rule).
    match /poolIssues/{issueId} {
        allow create: if request.auth.uid != null;
    }

    // Notifications are private to the recipient.
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth.uid == resource.data.recipientUid;
    }

    // Interaction logs are private to the user.
    match /aiInteractionsLog/{logId} {
        allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.userId;
        allow read: if request.auth.uid == resource.data.userId;
    }

    // Credit packages can be read by authenticated users.
    match /creditPackages/{packageId} {
        allow read: if request.auth != null;
    }
    
    // Seeded data and sticker sets can be read by anyone.
    match /my-seeded-collection/{strainId} {
        allow read: if true;
    }
    match /stickersets/{setId} {
        allow read: if resource.data.isPublic == true;
        allow read, write: if request.auth.uid == resource.data.creatorUid;
    }
    
  }
}
