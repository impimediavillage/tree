rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is the owner of a specific dispensary
    // This now checks the custom claim on the user's auth token, which is more secure and efficient.
    function isDispensaryOwner(dispensaryId) {
      return request.auth != null && request.auth.token.dispensaryId == dispensaryId;
    }

    match /dispensaries/{dispensaryId} {
      // Allow anyone to read dispensary listings
      allow read: if true;
      // Allow anyone to submit a new dispensary application
      allow create: if true;
      // Only allow updates/deletes by authenticated Super Admins
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    match /dispensaryTypes/{typeId} {
      // Allow anyone to read dispensary types
      allow read: if true;
      // Only allow Super Admins to create, update, or delete types
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    match /products/{productId} {
      // Anyone can read products for the storefront
      allow read: if true;
      
      // CREATE: Only the owner of the dispensary can create a product for it
      allow create: if isDispensaryOwner(request.resource.data.dispensaryId);
      
      // UPDATE: Only the owner of the dispensary can update their product
      allow update: if isDispensaryOwner(resource.data.dispensaryId);

      // DELETE: Only the owner of the dispensary can delete their product
      allow delete: if isDispensaryOwner(resource.data.dispensaryId);
    }
    
    // Allow users to manage their own document
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
      allow create: if request.auth.uid == userId; // Users can create their own doc
    }

    // Rules for other collections can be added here
  }
}
