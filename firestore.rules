
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }
    function isOwner(dispensaryId) {
      return isSignedIn() && request.auth.token.dispensaryId == dispensaryId;
    }
    function isOwnerOrStaff(dispensaryId) {
      return isSignedIn() && request.auth.token.dispensaryId == dispensaryId && (request.auth.token.role == 'DispensaryOwner' || request.auth.token.role == 'DispensaryStaff');
    }
    function isOwnerOf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Collections
    match /users/{userId} {
      allow read: if isSuperAdmin() || isOwnerOf(userId);
      allow write: if isSuperAdmin() || isOwnerOf(userId);
      allow create: if true; 
    }

    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || isSuperAdmin() || isOwner(dispensaryId);
      allow list: if isSuperAdmin();
      allow create: if true; 
      allow update: if isSuperAdmin() || isOwner(dispensaryId);
      allow delete: if isSuperAdmin();
    }

    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true; // Publicly readable
        allow write: if isSuperAdmin();
    }

    match /products/{productId} {
        allow read: if resource.data.isAvailableForPool == true || isOwnerOrStaff(resource.data.dispensaryId) || isSuperAdmin();
        allow list: if isSuperAdmin() || (isSignedIn() && request.auth.token.dispensaryId != null); // Allow listing for any dispensary user
        allow create, update: if isOwnerOrStaff(request.resource.data.dispensaryId);
        allow delete: if isOwnerOrStaff(resource.data.dispensaryId) || isSuperAdmin();
    }

    match /productRequests/{requestId} {
      allow read, write: if isSignedIn() && (isOwner(resource.data.productOwnerDispensaryId) || isOwner(resource.data.requesterDispensaryId) || isSuperAdmin());
      allow create: if isSignedIn();
    }

    match /poolIssues/{issueId} {
      allow read, write: if isSignedIn() && (isOwner(resource.data.reporterDispensaryId) || isOwner(resource.data.reportedDispensaryId) || isSuperAdmin());
      allow create: if isSignedIn();
    }

    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /aiInteractionsLog/{logId} {
      allow read, create: if isSignedIn() && (isOwnerOf(request.resource.data.userId) || isSuperAdmin());
      allow write: if isSuperAdmin();
    }
    
    match /stickersets/{setId} {
      allow get: if true; // Anyone can get a single document if they have the ID
      allow list: if request.query.get('where', [['isPublic', '==', true]])[0][2] == true || isSuperAdmin(); // Allow public listing
      allow write: if isSignedIn(); // Only signed-in users can create/update their own
    }
    
    match /my-seeded-collection/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
  }
}
