
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // HELPER FUNCTIONS

    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner(dispensaryId) {
      return request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }
    
    function isStaffOf(dispensaryId) {
      return request.auth.token.role == 'DispensaryStaff' && request.auth.token.dispensaryId == dispensaryId;
    }

    function isOwnerOfDispensaryOrStaff(dispensaryId) {
      return isDispensaryOwner(dispensaryId) || isStaffOf(dispensaryId);
    }
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // COLLECTION RULES

    match /users/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin();
      allow write: if isOwner(userId) || isSuperAdmin();
    }
    
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || isOwnerOfDispensaryOrStaff(dispensaryId) || isSuperAdmin();
      // Only Owners and SuperAdmins can create or update core dispensary info
      allow create, update: if isDispensaryOwner(dispensaryId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    match /products/{productId} {
      allow read: if resource.data.isAvailableForPool == true || isOwnerOfDispensaryOrStaff(resource.data.dispensaryId) || isSuperAdmin();
      allow create: if isOwnerOfDispensaryOrStaff(request.resource.data.dispensaryId) || isSuperAdmin();
      allow update, delete: if isOwnerOfDispensaryOrStaff(resource.data.dispensaryId) || isSuperAdmin();
    }
    
    match /productRequests/{requestId} {
      allow read, write: if isOwnerOfDispensaryOrStaff(request.resource.data.requesterDispensaryId) 
                          || isOwnerOfDispensaryOrStaff(request.resource.data.productOwnerDispensaryId) 
                          || isSuperAdmin();
    }

    match /poolIssues/{issueId} {
        allow read, write: if isOwnerOfDispensaryOrStaff(request.resource.data.reporterDispensaryId) 
                           || isOwnerOfDispensaryOrStaff(request.resource.data.reportedDispensaryId) 
                           || isSuperAdmin();
    }

    match /aiInteractionsLog/{logId} {
      allow read: if isOwner(resource.data.userId) || isOwnerOfDispensaryOrStaff(resource.data.dispensaryId) || isSuperAdmin();
      allow create: if isOwner(request.resource.data.userId) || isOwnerOfDispensaryOrStaff(request.resource.data.dispensaryId) || isSuperAdmin();
    }

    match /creditPackages/{packageId} {
      allow read: if isSignedIn(); // All signed-in users can see packages
      allow write: if isSuperAdmin(); // Only super admins can create/edit/delete
    }

    match /notifications/{notificationId} {
      allow read, update, delete: if isOwner(resource.data.recipientUid) || isSuperAdmin();
      allow create: if isSignedIn() || isSuperAdmin(); // Functions create notifications
    }
    
    match /dispensaryTypes/{typeId} {
      allow read: if true; // Publicly readable
      allow write: if isSuperAdmin(); // Only super admins can manage types
    }

    match /dispensaryTypeProductCategories/{typeId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    match /stickersets/{setId} {
        allow read: if resource.data.isPublic == true || isOwner(resource.data.creatorUid) || isSuperAdmin();
        allow create: if isSignedIn(); // Any signed-in user can create a set
        allow update, delete: if isOwner(resource.data.creatorUid) || isSuperAdmin();
    }

    // Scraper related collections
    match /scrapeLogs/{logId} {
      allow read, write: if isSuperAdmin();
    }
    match /importsHistory/{historyId} {
      allow read, write: if isSuperAdmin();
    }
    match /justbrand_catalog/{categoryId} {
      allow read: if isSuperAdmin();
      allow write: if isSuperAdmin();
      match /products/{productId} {
        allow read, write: if isSuperAdmin();
      }
    }

    // Seed data
    match /my-seeded-collection/{strainId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

  }
}
