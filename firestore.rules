
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin of any kind
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    // Helper function to get the user's dispensaryId from their profile
    function getUserDispensaryId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId;
    }

    // Helper function to check if a user belongs to a specific dispensary
    function isDispensaryMember(dispensaryId) {
      return getUserDispensaryId() == dispensaryId;
    }
    
    // Helper function to check if a user is an approved owner or staff of a specific dispensary
    function isApprovedDispensaryMember(dispensaryId) {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return (userRole == 'DispensaryOwner' || userRole == 'DispensaryStaff') && isDispensaryMember(dispensaryId);
    }
    
    match /users/{userId} {
      // Any authenticated user can create their own user document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can only read and update their own profiles
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Super Admins can read/write any user
      allow read, write: if isSuperAdmin();
      
      // A dispensary owner can list the users that belong to their dispensary
      allow list: if isApprovedDispensaryMember(request.query.where.dispensaryId);
    }

    match /dispensaryTypes/{typeId} {
      // Allow public read for everyone
      allow read: if true;
      // Only Super Admins can create, update, or delete types
      allow write: if isSuperAdmin();
    }
    
     match /dispensaryTypeProductCategories/{docId} {
      // Allow public read for everyone
      allow read: if true;
      // Only Super Admins can create, update, or delete
      allow write: if isSuperAdmin();
    }

    match /dispensaries/{dispensaryId} {
      // Anyone can submit a dispensary application (create)
      allow create: if true;
      // Anyone can read approved dispensaries
      allow read: if resource.data.status == 'Approved';
      // Only super admins can list all dispensaries for management
      allow list, write: if isSuperAdmin();
      // An approved owner or staff can update their own dispensary profile
      allow update: if isApprovedDispensaryMember(dispensaryId);
    }

    match /products/{productId} {
      // Allow read for anyone to view products from approved dispensaries
      allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
      // Allow dispensary members to list their own products
      allow list: if isApprovedDispensaryMember(request.query.where.dispensaryId);
      // Allow approved dispensary members to write to their own products
      allow write: if isApprovedDispensaryMember(request.resource.data.dispensaryId);
    }

    match /productRequests/{requestId} {
      // Authenticated users can create requests
      allow create: if request.auth != null;
      // Involved parties can read their requests
      allow read: if isApprovedDispensaryMember(resource.data.requesterDispensaryId) || isApprovedDispensaryMember(resource.data.productOwnerDispensaryId);
       // Involved parties can list their requests
      allow list: if isApprovedDispensaryMember(request.query.where.requesterDispensaryId) || isApprovedDispensaryMember(request.query.where.productOwnerDispensaryId);
      // Involved parties can update (e.g., change status, add notes)
      allow update: if isApprovedDispensaryMember(resource.data.requesterDispensaryId) || isApprovedDispensaryMember(resource.data.productOwnerDispensaryId);
    }
    
    match /poolIssues/{issueId} {
      // Involved parties can create issues
      allow create: if request.auth != null && (isApprovedDispensaryMember(request.resource.data.reporterDispensaryId) || isApprovedDispensaryMember(request.resource.data.reportedDispensaryId));
      // Only super admins can manage/view all issues
      allow read, write, list: if isSuperAdmin();
    }

    match /creditPackages/{packageId} {
      // Allow public read for active packages
      allow read: if resource.data.isActive == true;
      // Allow super admins to manage packages
      allow write, list: if isSuperAdmin();
    }

    match /aiInteractionsLog/{logId} {
        // Users can create their own log entries via a callable function
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        // Users can read their own interaction history
        allow read, list: if request.auth != null && request.auth.uid == resource.data.userId;
        // Super admins can view logs for analytics/auditing
        allow read, list: if isSuperAdmin();
    }
    
    match /stickersets/{setId} {
        // Anyone can read public sticker sets
        allow read: if resource.data.isPublic == true;
        allow list: if request.query.where.isPublic == true;
        // Users can only create/update/delete their own sticker sets
        allow create, update, delete: if request.auth.uid == request.resource.data.creatorUid;
    }
  }
}
