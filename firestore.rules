rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is an admin
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    // Helper function to check if user belongs to a specific dispensary
    function isDispensaryMember(dispensaryId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }
    
    // Users can only read their own profile, admins can read/write any.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSuperAdmin();
      allow write: if isSuperAdmin();
      allow create: if request.auth != null; 
    }

    // Dispensaries can only be read/written by their members or super admins.
    match /dispensaries/{dispensaryId} {
      allow read: if isDispensaryMember(dispensaryId) || isSuperAdmin();
      allow write: if isSuperAdmin();
      allow list: if isSuperAdmin();
    }
    
    // Dispensary Types can be read by anyone, only written by admins
    match /dispensaryTypes/{typeId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Dispensary Product Categories can be read by anyone, only written by admins
    match /dispensaryTypeProductCategories/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Products can be read by anyone.
    // List/Write is restricted to members of that dispensary or super admins.
    match /products/{productId} {
      allow read: if true;
      allow list: if request.query.where.dispensaryId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId || isSuperAdmin();
      allow write, delete: if isDispensaryMember(resource.data.dispensaryId) || isSuperAdmin();
      allow create: if isDispensaryMember(request.resource.data.dispensaryId) || isSuperAdmin();
    }

    // Product Requests can only be seen by the involved parties or super admins
    match /productRequests/{requestId} {
      allow read, write: if isDispensaryMember(resource.data.productOwnerDispensaryId) || isDispensaryMember(resource.data.requesterDispensaryId) || isSuperAdmin();
      allow list: if isSuperAdmin(); // Listing all requests is admin-only for now
      allow create: if request.auth != null;
    }

    // Pool issues can only be managed by admins
    match /poolIssues/{issueId} {
      allow read, write: if isSuperAdmin();
    }

    // Interaction logs are private to the user or an admin
    match /aiInteractionsLog/{logId} {
        allow read, create: if request.auth.uid == request.resource.data.userId || isSuperAdmin();
        allow list: if isSuperAdmin();
    }
    
    // Credit packages can be read by anyone, only written by admins
    match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // StickerSets can be read by anyone, written by their creator or admin
    match /stickersets/{stickerId} {
      allow read: if true;
      allow create: if request.auth.uid == request.resource.data.creatorUid;
      allow update, delete: if get(/databases/$(database)/documents/stickersets/$(stickerId)).data.creatorUid == request.auth.uid || isSuperAdmin();
    }

  }
}