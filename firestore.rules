
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner() {
      return isSignedIn() && request.auth.token.role == 'DispensaryOwner';
    }

    function isDispensaryStaff() {
      return isSignedIn() && request.auth.token.role == 'DispensaryStaff';
    }

    function isOwnerOrStaffOfDispensary(dispensaryId) {
      return isSignedIn() && request.auth.token.dispensaryId == dispensaryId && (isDispensaryOwner() || isDispensaryStaff());
    }

    //----------------------------------------------------------------------
    // /dispensaries
    //  - Public can read approved dispensaries.
    //  - Admins can read/write all.
    //  - Owners can read their own dispensary doc to get their type and details.
    //  - Owners can update their own dispensary doc.
    //----------------------------------------------------------------------
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || 
                      (isOwnerOrStaffOfDispensary(dispensaryId)) || 
                      isSuperAdmin();
      allow create, update, delete: if isSuperAdmin();
      allow update: if isOwnerOrStaffOfDispensary(dispensaryId);
    }

    //----------------------------------------------------------------------
    // /dispensaryTypes
    //  - Publicly readable by anyone to browse types.
    //  - Only admins can create/update/delete.
    //----------------------------------------------------------------------
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    //----------------------------------------------------------------------
    // /dispensaryTypeProductCategories
    //  - Readable by any authenticated user (needed for dynamic forms).
    //  - Only admins can create/update/delete.
    //----------------------------------------------------------------------
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    //----------------------------------------------------------------------
    // /users
    //  - Users can read/update their own document.
    //  - Admins can read/write any user document.
    //  - Dispensary owners can read their staff's documents.
    //----------------------------------------------------------------------
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isSuperAdmin();
      allow read: if isDispensaryOwner() && resource.data.dispensaryId == request.auth.token.dispensaryId;
      allow create, delete: if isSuperAdmin();
    }
    
    //----------------------------------------------------------------------
    // /products
    //  - Public can read products from approved dispensaries.
    //  - Owners/Staff can manage products for their own dispensary.
    //  - Admins can manage all products.
    //----------------------------------------------------------------------
    match /products/{productId} {
      allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved' ||
                     isOwnerOrStaffOfDispensary(resource.data.dispensaryId) ||
                     isSuperAdmin();
      allow create, update, delete: if isOwnerOrStaffOfDispensary(request.resource.data.dispensaryId) ||
                                      isSuperAdmin();
    }

    //----------------------------------------------------------------------
    // /productRequests & subcollections
    //  - Accessible only by the involved parties or an admin.
    //----------------------------------------------------------------------
    match /productRequests/{requestId} {
      allow read, update: if isOwnerOrStaffOfDispensary(resource.data.productOwnerDispensaryId) ||
                              isOwnerOrStaffOfDispensary(resource.data.requesterDispensaryId) ||
                              isSuperAdmin();
      allow create: if isOwnerOrStaffOfDispensary(request.resource.data.requesterDispensaryId);
      allow delete: if isSuperAdmin();
    }
    
    //----------------------------------------------------------------------
    // /poolIssues
    //  - Only accessible by Super Admins.
    //----------------------------------------------------------------------
    match /poolIssues/{issueId} {
      allow read, write: if isSuperAdmin();
      allow create: if isDispensaryOwner(); // Allow owners to create issues
    }

    //----------------------------------------------------------------------
    // /notifications
    //  - Users can only read their own notifications.
    //----------------------------------------------------------------------
    match /notifications/{notificationId} {
        allow read, update, delete: if isSignedIn() && resource.data.recipientUid == request.auth.uid;
        allow create: if isSuperAdmin(); // Or by cloud functions
    }
    
    //----------------------------------------------------------------------
    // /aiInteractionsLog
    //  - Users can only read their own logs.
    //----------------------------------------------------------------------
     match /aiInteractionsLog/{logId} {
        allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
        // Creation should be handled by a secure backend function.
        allow create, update, delete: if false; 
    }
    
    //----------------------------------------------------------------------
    // /creditPackages
    //  - Publicly readable if active.
    //  - Writable only by Super Admins.
    //----------------------------------------------------------------------
    match /creditPackages/{packageId} {
        allow read: if resource.data.isActive == true;
        allow write: if isSuperAdmin();
    }
    
    //----------------------------------------------------------------------
    // /stickersets
    //  - Public can read sets marked as public.
    //  - Owners can manage their own sets.
    //----------------------------------------------------------------------
    match /stickersets/{setId} {
        allow read: if resource.data.isPublic == true;
        allow read, update, delete: if isSignedIn() && resource.data.creatorUid == request.auth.uid;
        allow create: if isSignedIn();
    }

    //----------------------------------------------------------------------
    // /my-seeded-collection (example, adjust if necessary)
    //  - Readable by authenticated users. Writable only by admin.
    //----------------------------------------------------------------------
    match /my-seeded-collection/{strainId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }
    
    //----------------------------------------------------------------------
    // /scrapeLogs & /importsHistory (Admin only)
    //----------------------------------------------------------------------
    match /scrapeLogs/{logId} {
      allow read, write: if isSuperAdmin();
    }
    
    match /importsHistory/{historyId} {
       allow read, write: if isSuperAdmin();
    }
    
    //----------------------------------------------------------------------
    // /justbrand_catalog & subcollections (Admin only)
    //----------------------------------------------------------------------
    match /justbrand_catalog/{doc=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
