
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Publicly readable collections
    match /dispensaryTypes/{typeId} {
      allow read: if true;
    }
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved';
    }
    match /products/{productId} {
      allow read: if true;
    }
    match /stickersets/{stickerId} {
        allow read: if resource.data.isPublic == true;
    }

    // Authenticated users can read their own data and some shared data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /my-seeded-collection/{strainId} {
      allow read: if request.auth != null;
    }

    // Rules for dispensary owners and staff
    match /dispensaries/{dispensaryId} {
      // Allow owner to update their own dispensary
      allow update: if request.auth.uid == resource.data.ownerUid;
      // Allow read for owner, regardless of status
      allow read: if request.auth.uid == resource.data.ownerUid;
    }

    match /products/{productId} {
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == resource.data.dispensaryId;
    }
    
    match /stickersets/{stickerId} {
        allow create: if request.auth.uid == request.resource.data.creatorUid;
        allow update, delete: if request.auth.uid == resource.data.creatorUid;
    }

    // Rules for product requests
    match /productRequests/{requestId} {
      allow create: if request.auth != null; // Any auth user can create
      allow read, update: if request.auth.uid == resource.data.requesterUid || request.auth.uid == resource.data.productOwnerUid;
    }

    // Notifications are private to the recipient
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth.uid == resource.data.recipientUid;
    }
    
    // AI Interaction Logs are private to the user who created them
    match /aiInteractionsLog/{logId} {
        allow create: if request.auth.uid == request.resource.data.userId;
        allow read: if request.auth.uid == resource.data.userId;
    }

    // Super Admin has god-mode access
    match /{path=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
  }
}
