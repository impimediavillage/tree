
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner(dispensaryId) {
      return isSignedIn() && request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }
    
    function isOwnerOfDispensary(dispensaryId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }

    function isLeafUser() {
      return isSignedIn() && (request.auth.token.role == 'LeafUser' || request.auth.token.role == 'User');
    }
    
    function isDispensaryStaff(dispensaryId) {
      return isSignedIn() && request.auth.token.role == 'DispensaryStaff' && request.auth.token.dispensaryId == dispensaryId;
    }

    function isOwnerOrStaffOfDispensary(dispensaryId) {
      return isDispensaryOwner(dispensaryId) || isDispensaryStaff(dispensaryId);
    }
    
    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Collection Rules
    
    match /dispensaries/{dispensaryId} {
      // Super Admin: Full access
      // Dispensary Owner/Staff: Can only read/write their own dispensary
      // Public: Can read approved dispensaries
      allow read: if isSuperAdmin() || isOwnerOrStaffOfDispensary(dispensaryId) || resource.data.status == 'Approved';
      allow create: if isSignedIn(); // Any signed-in user can apply
      allow update: if isSuperAdmin() || isDispensaryOwner(dispensaryId);
      allow delete: if isSuperAdmin();
    }
    
    match /dispensaryTypes/{typeId} {
      // Publicly readable, only admin can change
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaryTypeProductCategories/{docId} {
        // Publicly readable, only admin can change
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    match /users/{userId} {
      // Super Admin: Full access
      // User: Can read/write their own profile
      // Dispensary Owner: Can read staff/linked users for their dispensary
      allow read: if isSuperAdmin() || isSelf(userId) || (isDispensaryOwner(resource.data.dispensaryId) && resource.data.role != 'Super Admin');
      allow create: if isSuperAdmin() || isSelf(userId); // User creation on signup or by admin
      allow update: if isSuperAdmin() || isSelf(userId) || isDispensaryOwner(resource.data.dispensaryId);
      allow delete: if isSuperAdmin();
    }

    match /products/{productId} {
      // Public: Can read products of approved dispensaries
      // Owner/Staff: Can manage products for their dispensary
      allow read: if isSuperAdmin() || get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
      allow create, update: if isSuperAdmin() || isOwnerOrStaffOfDispensary(request.resource.data.dispensaryId);
      allow delete: if isSuperAdmin() || isOwnerOrStaffOfDispensary(resource.data.dispensaryId);
    }
    
    match /productRequests/{requestId} {
      // Only involved parties or Super Admin can access
      allow read, update: if isSuperAdmin() || 
                           isOwnerOrStaffOfDispensary(resource.data.productOwnerDispensaryId) || 
                           isOwnerOrStaffOfDispensary(resource.data.requesterDispensaryId);
      allow create: if isSignedIn() && (isOwnerOrStaffOfDispensary(request.resource.data.requesterDispensaryId));
      allow delete: if isSuperAdmin();
    }
    
    match /poolIssues/{issueId} {
        // Only Super Admin can fully manage. Involved parties can read.
        allow read: if isSuperAdmin() ||
                     isOwnerOrStaffOfDispensary(resource.data.reporterDispensaryId) ||
                     isOwnerOrStaffOfDispensary(resource.data.reportedDispensaryId);
        allow create: if isSignedIn() && (isOwnerOrStaffOfDispensary(request.resource.data.reporterDispensaryId));
        allow update, delete: if isSuperAdmin();
    }
    
    match /notifications/{notificationId} {
      // Only the recipient or an admin can read/write
      allow read, write: if isSuperAdmin() || isSelf(resource.data.recipientUid);
    }

    match /creditPackages/{packageId} {
      // Publicly readable, admin write only
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /aiInteractionsLog/{logId} {
      // User can read their own, admin can read all
      allow read: if isSuperAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      // Only backend can create
      allow write: if false; 
    }

    match /stickersets/{setId} {
        // Public can read if isPublic is true. Owner/Admin can read always.
        allow read: if isSuperAdmin() || resource.data.isPublic == true || (isSignedIn() && request.auth.uid == resource.data.creatorUid);
        // Only owner can create/update/delete.
        allow create: if isSignedIn() && request.resource.data.creatorUid == request.auth.uid;
        allow update, delete: if isSuperAdmin() || (isSignedIn() && resource.data.creatorUid == request.auth.uid);
    }
    
    // Seed data collections
    match /my-seeded-collection/{docId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin(); // Or specific backend role
    }
    
    match /justbrand_catalog/{docId} {
       allow read: if isSignedIn();
       allow write: if isSuperAdmin();
       match /products/{productId} {
         allow read: if isSignedIn();
         allow write: if isSuperAdmin();
       }
    }
    
    match /{path=**}/uploads/{uploadId} {
       allow read, write: if isSignedIn();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
