
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =================================================================
    // Helper Functions
    // =================================================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isDispensaryOwner(dispensaryId) {
      // Check if user has the role and is associated with the specific dispensary
      return isSignedIn() 
             && request.auth.token.role == 'DispensaryOwner'
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }

    // =================================================================
    // Global Access Rules
    // =================================================================
    
    // Super Admins have god-mode access to everything. This rule is broad and is the foundation
    // of fixing all admin permission issues.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
    
    // =================================================================
    // Collection-Specific Rules
    // =================================================================

    // --- User Profiles ---
    match /users/{userId} {
      // Users can read/write their own document.
      allow read, update, delete: if isOwner(userId);
      // Anyone can create a user doc (on signup).
      allow create: if true; 
    }

    // --- Dispensary Types & Categories ---
    match /dispensaryTypes/{typeId} {
      allow read: if true; // Publicly readable
      allow write: if isSuperAdmin(); // Only admins can modify
    }
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true; // Publicly readable
        allow write: if isSuperAdmin(); // Only admins can modify
    }

    // --- Dispensaries (Wellness Profiles) ---
    match /dispensaries/{dispensaryId} {
      // Public can read if it's an approved dispensary
      allow read: if resource.data.status == 'Approved';
      // Dispensary owners can update their own dispensary
      allow update: if isDispensaryOwner(dispensaryId);
      // Anyone can create an application
      allow create: if true;
    }

    // --- Products ---
    match /products/{productId} {
      // Public can read any product.
      allow read: if true;
      // Only the owning dispensary can create/update/delete their products.
      allow write: if isDispensaryOwner(request.resource.data.dispensaryId);
    }
    
    // --- Product Requests ---
    match /productRequests/{requestId} {
      // Only involved parties (requester or owner) can read the request.
      allow read: if isDispensaryOwner(resource.data.requesterDispensaryId) || isDispensaryOwner(resource.data.productOwnerDispensaryId);
      // Only the requester can create or cancel a request.
      allow create, update: if isDispensaryOwner(request.resource.data.requesterDispensaryId);
      // The product owner can also update the request (e.g., to accept/reject).
      allow update: if isDispensaryOwner(resource.data.productOwnerDispensaryId);
    }

    // --- Pool Issues ---
    match /poolIssues/{issueId} {
      // Involved parties can read the issue.
      allow read: if isDispensaryOwner(resource.data.reporterDispensaryId) || isDispensaryOwner(resource.data.reportedDispensaryId);
      // Only the reporter can create an issue.
      allow create: if isDispensaryOwner(request.resource.data.reporterDispensaryId);
      // Only admins can update/resolve issues. (Covered by global admin rule)
    }

    // --- Sticker Sets ---
    match /stickersets/{stickerId} {
      // Public can read if it's marked as public
      allow read: if resource.data.isPublic == true;
      // The creator can read their own private sets
      allow read: if isOwner(resource.data.creatorUid);
      // Authenticated users can create sticker sets
      allow create: if isSignedIn();
      // Only the creator can update or delete their sticker set
      allow update, delete: if isOwner(resource.data.creatorUid);
    }

    // --- AI Interaction Logs & Notifications ---
    match /aiInteractionsLog/{logId} {
      // Only the user who created the log can read it.
      allow read: if isOwner(resource.data.userId);
      // Logs are created by backend functions, not directly by clients.
      allow write: if false; 
    }
    
    match /notifications/{notificationId} {
      // Only the recipient can read/update their notification.
      allow read, update: if isOwner(resource.data.recipientUid);
      // Notifications are created by backend functions.
      allow write: if false;
    }

    // --- Credit Packages ---
    match /creditPackages/{packageId} {
      // All users can read active credit packages to purchase them.
      allow read: if resource.data.isActive == true;
      // Only admins can create/edit packages. (Covered by global admin rule)
    }
    
    // --- Scraper & Other Backend Logs ---
    match /scrapeLogs/{logId} { allow read, write: if false; }
    match /importsHistory/{historyId} { allow read, write: if false; }
    match /justbrand_catalog/{docId}/{document=**} { allow read, write: if false; }
    match /my-seeded-collection/{docId} { allow read, write: if false; }
  }
}
