
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }
    
    function isDispensaryOwner(dispensaryId) {
      return isSignedIn() && request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }

    function isDispensaryStaff(dispensaryId) {
       return isSignedIn() && request.auth.token.role == 'DispensaryStaff' && request.auth.token.dispensaryId == dispensaryId;
    }

    function isOwnerOrStaff(dispensaryId) {
        return isDispensaryOwner(dispensaryId) || isDispensaryStaff(dispensaryId);
    }

    function isOwnerOfUser(userId) {
       return request.auth.uid == userId;
    }

    function isPublicResource(resourceData) {
        return resourceData.status == 'Approved';
    }

    function isPublicProduct(resourceData) {
        return get(/databases/$(database)/documents/dispensaries/$(resourceData.dispensaryId)).data.status == 'Approved';
    }
    
    // USERS:
    // - Users can read and update their own document.
    // - Super Admins can read/write any user.
    // - Dispensary Owners can read users linked to their dispensary.
    match /users/{userId} {
      allow read: if isOwnerOfUser(userId) || isSuperAdmin() || isDispensaryOwner(get(/databases/$(database)/documents/users/$(userId)).data.dispensaryId);
      allow write: if isOwnerOfUser(userId) || isSuperAdmin();
      allow create: if isSignedIn();
    }

    // DISPENSARIES:
    // - Public can read approved dispensaries.
    // - Owners/Staff can read their own dispensary.
    // - Super Admins can read/write any dispensary.
    // - Anyone can create a dispensary (application).
    match /dispensaries/{dispensaryId} {
      allow read: if isPublicResource(resource.data) || isOwnerOrStaff(dispensaryId) || isSuperAdmin();
      allow update: if isOwnerOrStaff(dispensaryId) || isSuperAdmin();
      allow create: if true; // Public can apply
      allow delete: if isSuperAdmin();
    }

    // DISPENSARY TYPES:
    // - Public can read all dispensary types.
    // - Only Super Admins can create, update, or delete them.
    match /dispensaryTypes/{typeId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
     match /dispensaryTypeProductCategories/{typeId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    // PRODUCTS:
    // - Public can read products from approved dispensaries.
    // - Owners/Staff can manage products for their own dispensary.
    // - Super Admins can manage all products.
    match /products/{productId} {
      allow read: if isPublicProduct(resource.data);
      allow create, update, delete: if isOwnerOrStaff(request.resource.data.dispensaryId) || isSuperAdmin();
    }
    
    // PRODUCT REQUESTS:
    // - Only involved parties (requester/owner) or Super Admins can access.
    match /productRequests/{requestId} {
        allow read, update: if isOwnerOrStaff(resource.data.requesterDispensaryId) || isOwnerOrStaff(resource.data.productOwnerDispensaryId) || isSuperAdmin();
        allow create: if isSignedIn() && (isOwnerOrStaff(request.resource.data.requesterDispensaryId));
    }
    
    // POOL ISSUES:
    // - Only involved parties or Super Admins can read.
    // - Only Super Admins can update/resolve issues.
    // - Owners/Staff can create issues.
    match /poolIssues/{issueId} {
        allow read: if isOwnerOrStaff(resource.data.reporterDispensaryId) || isOwnerOrStaff(resource.data.reportedDispensaryId) || isSuperAdmin();
        allow create: if isSignedIn() && isOwnerOrStaff(request.resource.data.reporterDispensaryId);
        allow update, delete: if isSuperAdmin();
    }
    
    // NOTIFICATIONS:
    // - Users can only access their own notifications.
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn() && request.auth.uid == resource.data.recipientUid;
      allow create: if isSignedIn(); // Functions create these
    }

    // AI INTERACTIONS LOG:
    // - Users can read their own logs.
    // - Super Admins can read all logs for analytics.
    match /aiInteractionsLog/{logId} {
        allow read: if (isSignedIn() && request.auth.uid == resource.data.userId) || isSuperAdmin();
        allow create: if isSignedIn(); // Functions create these
    }

    // CREDIT PACKAGES:
    // - Public can read active packages.
    // - Super Admins can manage all packages.
    match /creditPackages/{packageId} {
        allow read: if resource.data.isActive == true;
        allow write: if isSuperAdmin();
    }

    // STICKER SETS:
    // - Public can read public sets.
    // - Users can manage their own sets.
    // - Super Admins can manage all sets.
    match /stickersets/{setId} {
      allow read: if resource.data.isPublic == true;
      allow create: if isSignedIn();
      allow update, delete: if (isSignedIn() && request.auth.uid == resource.data.creatorUid) || isSuperAdmin();
    }
    
     // IMPORTS & SCRAPE LOGS (Admin only)
    match /importsHistory/{historyId} {
        allow read, write: if isSuperAdmin();
    }
     match /scrapeLogs/{logId} {
        allow read, write: if isSuperAdmin();
    }
  }
}
