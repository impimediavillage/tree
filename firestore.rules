
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check for a specific role
    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    // Helper function to check if the user is a Super Admin
    function isSuperAdmin() {
      return hasRole('Super Admin');
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users Collection: Users can read/write their own data. Admins can read/write any.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isSuperAdmin();
      // Allow any authenticated user to see a user's public profile data (if any was made public)
      // For now, locking it down is safer.
    }

    // Dispensaries: Publicly readable, but only admins can create/update/delete.
    match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow create, update, delete: if isSuperAdmin();
      
      // Dispensary Owner can update their own dispensary document.
      allow update: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }

    // Products: Publicly readable. Only associated dispensary owner/staff can write.
    match /products/{productId} {
      allow read: if true;
      // Allow create/update/delete if the user's dispensaryId matches the product's dispensaryId
      allow write: if isAuthenticated() && request.auth.token.dispensaryId == resource.data.dispensaryId;
    }

    // Dispensary Types: Publicly readable, only admins can change them.
    match /dispensaryTypes/{typeId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Dispensary Type Product Categories: Publicly readable, only admins can change them.
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Sticker Sets: Publicly readable. Writable only by the creator.
    match /stickersets/{setId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.creatorUid;
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.creatorUid;
    }

    // Product Requests: Can be created by authenticated users. Can only be read/updated by participants or admin.
    match /productRequests/{requestId} {
      allow read, update: if isSuperAdmin() || (isAuthenticated() && (request.auth.token.dispensaryId == resource.data.productOwnerDispensaryId || request.auth.token.dispensaryId == resource.data.requesterDispensaryId));
      allow create: if isAuthenticated() && request.auth.token.dispensaryId == request.resource.data.requesterDispensaryId;
    }

    // Pool Issues: Can be created by auth'd users. Only readable/writable by admins.
    match /poolIssues/{issueId} {
      allow read, update: if isSuperAdmin();
      allow create: if isAuthenticated() && request.auth.token.dispensaryId == request.resource.data.reporterDispensaryId;
    }

    // Notifications: Only readable by the recipient user or an admin.
    match /notifications/{notificationId} {
      allow read, write: if isOwner(resource.data.recipientUid) || isSuperAdmin();
    }

    // Credit Packages: Publicly readable, admin write only.
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Seeded strain data: Publicly readable. Writable only by Super Admin.
    match /my-seeded-collection/{strainId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Scraped catalog data: Publicly readable. Writable only by Super Admin (via function).
    match /justbrand_catalog/{doc=**} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Scrape logs: Admin only
    match /scrapeLogs/{logId} {
        allow read, write: if isSuperAdmin();
    }
    
    match /importsHistory/{historyId} {
        allow read, write: if isSuperAdmin();
    }

    // AI Interaction Logs: Only readable by the user who created it or an admin.
    match /aiInteractionsLog/{logId} {
      allow read, write: if isOwner(resource.data.userId) || isSuperAdmin();
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
  }
}
