rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default-deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access ONLY to the 'my-seeded-collection'
    // This is required for the public strain finder functionality.
    match /my-seeded-collection/{strainId} {
      allow get, list: if true;
      allow write: if false; // Writes are still protected
    }
    
    // Secure other collections (examples)
    // You would add specific rules for your other collections here.
    // For now, they remain locked down by the default-deny rule above.
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    // match /dispensaries/{dispensaryId} {
    //  allow read: if true;
    //  allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    // }
  }
}
