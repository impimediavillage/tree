
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Super Admin role via custom claims
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Helper function to check for Dispensary Owner/Staff via custom claims
    function isDispensaryAdmin(dispensaryId) {
      return request.auth != null && request.auth.token.dispensaryId == dispensaryId;
    }
    
    // Helper function to check for any logged-in user
    function isSignedIn() {
      return request.auth != null;
    }

    // Publicly readable collections
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    // Semi-public: Anyone can read approved dispensaries
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || isDispensaryAdmin(dispensaryId) || isSuperAdmin();
      allow create: if isSignedIn(); // Anyone can apply
      allow update, delete: if isDispensaryAdmin(dispensaryId) || isSuperAdmin();
    }
    
    // Users can read/update their own doc. Admins have more permissions.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSuperAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isSuperAdmin();
      
      // Dispensary Admins can manage users linked to their dispensary
      allow read, update: if isDispensaryAdmin(resource.data.dispensaryId);
      
      // Allow SuperAdmins to read/write any user document.
      allow read, write: if isSuperAdmin();
    }

    // Products can be read by anyone, but only modified by the owning dispensary or a super admin.
    match /products/{productId} {
      allow read: if true;
      allow write: if isDispensaryAdmin(request.resource.data.dispensaryId) || isSuperAdmin();
    }
    
    // Collection group for products to allow querying across all dispensaries
    // This allows dispensary owners to query for *their own* products.
    match /{path=**}/products/{productId} {
      allow list: if isSignedIn();
    }
    
    // Product requests can only be accessed by participants or super admins.
    match /productRequests/{requestId} {
      allow read, update: if isDispensaryAdmin(resource.data.requesterDispensaryId) || isDispensaryAdmin(resource.data.productOwnerDispensaryId) || isSuperAdmin();
      allow create: if isSignedIn();
    }
    
    // Pool issues can only be accessed by participants or super admins.
    match /poolIssues/{issueId} {
        allow read, update: if isDispensaryAdmin(resource.data.reporterDispensaryId) || isDispensaryAdmin(resource.data.reportedDispensaryId) || isSuperAdmin();
        allow create: if isSignedIn();
    }
    
    // AI Interaction logs can only be read/created by the user themselves or an admin.
    match /aiInteractionsLog/{logId} {
        allow read, create: if request.auth.uid == request.resource.data.userId || isSuperAdmin();
        // No updates/deletes to preserve history
    }
    
    // Sticker sets can be read by anyone, but written only by the creator/admin.
    match /stickersets/{setId} {
        allow read: if true;
        allow create: if request.auth.uid == request.resource.data.creatorUid;
        allow update, delete: if request.auth.uid == resource.data.creatorUid || isSuperAdmin();
    }
  }
}
