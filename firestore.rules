rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read dispensaries (for store listings), 
    // but only the owner/staff can write to their own dispensary document.
    match /dispensaries/{dispensaryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.dispensaryId == dispensaryId;
    }
    
    // Any authenticated user can read the strain data needed for the StrainFinder.
    // Writing should be locked down (e.g., only from the console or an admin account).
    match /my-seeded-collection/{strainId} {
      allow read: if request.auth != null;
      allow write: if false; // Deny writes from the client for safety
    }
    
    // Add other rules for your collections here...
    // Example: allow reads for public collections
    match /dispensaryTypes/{typeId} {
        allow read: if true;
    }
    
    match /products/{productId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.dispensaryId == request.resource.data.dispensaryId;
    }

    match /stickersets/{stickerId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.creatorUid;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorUid;
    }

    // Allow authenticated users to interact with their own cart, requests, etc.
    match /productRequests/{requestId} {
        allow read, write: if request.auth != null;
    }
    
    match /poolIssues/{issueId} {
        allow read, write: if request.auth != null;
    }
    
    match /aiInteractionsLog/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

     match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
    
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true; // Publicly readable for product forms
        allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
  }
}