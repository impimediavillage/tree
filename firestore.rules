rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isDispensaryMember(dispensaryId) {
      return request.auth != null && request.auth.token.dispensaryId == dispensaryId;
    }
  
    function isRole(role) {
      return request.auth != null && request.auth.token.role == role;
    }
    
    function isDispensaryOwner() {
      return isRole('DispensaryOwner');
    }
    
    function isDispensaryStaff() {
      return isRole('DispensaryStaff');
    }
    
    // Check if user is a vendor (DispensaryStaff with Vendor type)
    function isVendor() {
      return isRole('DispensaryStaff') && request.auth.token.crewMemberType == 'Vendor';
    }
    
    // Check if user can manage a product (owner/staff or vendor who created it)
    function canManageProduct(productData) {
      return isDispensaryMember(productData.dispensaryId) && 
             (isDispensaryOwner() || 
              (isDispensaryStaff() && !isVendor()) || 
              (isVendor() && (productData.createdBy == request.auth.uid || productData.vendorUserId == request.auth.uid)));
    }

    // ===== SUPER ADMIN ACCESS =====
    match /{document=**} {
      allow read, write: if isRole('Super Admin');
    }

    // ===== USER MANAGEMENT =====
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Dispensary staff can read users in their dispensary
      allow read: if isAuthenticated() && 
                    request.auth.token.dispensaryId != null && 
                    get(/databases/$(database)/documents/users/$(userId)).data.dispensaryId == request.auth.token.dispensaryId;
      // Allow public user creation during checkout (guest checkout flow)
      allow create: if request.auth.uid == userId || isRole('Super Admin');
      allow delete: if isRole('Super Admin');
      
      // IMPORTANT: Users can update their own profile BUT cannot change critical fields
      // Allow FCM token updates
      allow update: if isAuthenticated() && 
                      request.auth.uid == userId && 
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['fcmTokens', 'lastTokenUpdate']);
      
      // Allow profile updates but protect critical fields (role, crewMemberType, dispensaryId, isDriver)
      allow update: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      request.resource.data.role == resource.data.role &&
                      request.resource.data.get('crewMemberType', null) == resource.data.get('crewMemberType', null) &&
                      request.resource.data.dispensaryId == resource.data.dispensaryId &&
                      request.resource.data.get('isDriver', false) == resource.data.get('isDriver', false);
    }

    // ===== ORDER COUNTERS =====
    match /order_counters/{counterId} {
      // Allow authenticated users to read order counters (needed for order number generation)
      allow read: if isAuthenticated();
      // Only allow writes from backend/cloud functions
      allow write: if false;
    }

    // ===== DISPENSARIES =====
    match /dispensaries/{dispensaryId} {
      allow read: if true; // Public read for browsing
      // ONLY DISPENSARY OWNERS CAN UPDATE DISPENSARY PROFILE
      // Staff (vendors, drivers, in-house) can only update their user profile, not dispensary
      allow update: if isDispensaryMember(dispensaryId) && isDispensaryOwner();
      allow create, delete: if isRole('Super Admin');
    }

    // ===== PUBLIC REFERENCES =====
    match /aiAdvisors/{advisorId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }
    
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true;
      allow update: if isDispensaryOwner() && 
                      request.resource.data.name == get(/databases/$(database)/documents/dispensaries/$(request.auth.token.dispensaryId)).data.dispensaryType;
      allow write: if isRole('Super Admin');
    }
    
    match /creditPackages/{packageId} {
      allow read: if resource.data.isActive == true;
      allow write: if isRole('Super Admin');
    }

    match /educationalVideos/{videoId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    match /pricing_rules/{ruleId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    match /apparel_items/{itemId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    match /apparel_items/{itemId} {
      allow read: if true;
      allow write: if isRole('Super Admin');
    }

    // ===== PRODUCT COLLECTIONS =====
    // Main products collection (fallback)
    match /products/{productId} {
      allow read: if true;
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if canManageProduct(resource.data);
      allow delete: if canManageProduct(resource.data);
    }

    // Cannibinoid Store Products
    match /cannibinoid_store_products/{productId} {
      allow read: if true;
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if canManageProduct(resource.data);
      allow delete: if canManageProduct(resource.data);
    }

    // Traditional Medicine Products
    match /traditional_medicine_dispensary_products/{productId} {
      allow read: if true;
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if canManageProduct(resource.data);
      allow delete: if canManageProduct(resource.data);
    }

    // Mushroom Store Products
    match /mushroom_store_products/{productId} {
      allow read: if true;
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if canManageProduct(resource.data);
      allow delete: if canManageProduct(resource.data);
    }

    // Homeopathy Store Products
    match /homeopathy_store_products/{productId} {
      allow read: if true;
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if canManageProduct(resource.data);
      allow delete: if canManageProduct(resource.data);
    }

    // Permaculture Store Products
    match /permaculture_store_products/{productId} {
      allow read: if true;
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if canManageProduct(resource.data);
      allow delete: if canManageProduct(resource.data);
    }
    
    // Product Pool Products
    match /productPoolProducts/{productId} {
      allow read: if true;
      allow create, update: if isDispensaryMember(request.resource.data.dispensaryId);
      allow delete: if isDispensaryMember(resource.data.dispensaryId);
    }

    // ===== PRODUCT POOL SYSTEM =====
    match /productRequests/{requestId} {
      allow create: if isAuthenticated();
      allow read: if isDispensaryMember(resource.data.productOwnerDispensaryId) || 
                     isDispensaryMember(resource.data.requesterDispensaryId);
      allow update: if isDispensaryMember(resource.data.productOwnerDispensaryId) || 
                       isDispensaryMember(resource.data.requesterDispensaryId);
      allow delete: if isRole('Super Admin');
    }
    
    match /productPoolOrders/{orderId} {
      allow create: if isAuthenticated();
      allow read: if isDispensaryMember(resource.data.productOwnerDispensaryId) || 
                     isDispensaryMember(resource.data.requesterDispensaryId);
      allow update: if isDispensaryMember(resource.data.productOwnerDispensaryId) || 
                       isDispensaryMember(resource.data.requesterDispensaryId);
      allow delete: if isRole('Super Admin');
    }
    
    match /poolIssues/{issueId} {
      allow create: if isAuthenticated();
      allow read, update: if isDispensaryMember(resource.data.reporterDispensaryId) || 
                             isDispensaryMember(resource.data.reportedDispensaryId);
    }

    // ===== ORDERS SYSTEM =====
    match /orders/{orderId} {
      // Allow reading orders if:
      // 1. User is the customer who placed the order
      // 2. User is dispensary owner/staff with a dispensaryId (will be filtered client-side)
      // 3. User is Super Admin
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.userId || 
                     request.auth.token.dispensaryId in resource.data.shipments.keys() ||
                     (request.auth.token.dispensaryId != null && (isDispensaryOwner() || isDispensaryStaff())) ||
                     isRole('Super Admin'));
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
                      (request.auth.uid == resource.data.userId || 
                       request.auth.token.dispensaryId in resource.data.shipments.keys() ||
                       isRole('Super Admin'));
      allow delete: if isRole('Super Admin');
    }

    // ===== NOTIFICATIONS =====
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if true; // System can create notifications
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    match /notificationPreferences/{userId} {
      // Users can read/write their own preferences
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Also allow if the document doesn't exist yet (for creation)
      allow create: if isAuthenticated();
    }

    match /driver_notifications/{notificationId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.driverId;
      allow create: if true;
      allow update: if isAuthenticated() && request.auth.uid == resource.data.driverId;
    }

    // ===== REVIEWS SYSTEM =====
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow delete: if isRole('Super Admin');
    }

    match /dispensaryReviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow delete: if isRole('Super Admin');
    }

    match /dispensaryReviewStats/{dispensaryId} {
      allow read: if true;
      allow write: if false; // Updated by Cloud Functions only
    }

    // ===== USER DATA =====
    match /carts/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /wishlists/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /payment_methods/{methodId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    match /shipping_addresses/{addressId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // ===== ADVISOR CHATS =====
    match /advisor_chats/{chatId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    match /aiInteractionsLog/{logId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.userId || 
                     isDispensaryMember(resource.data.dispensaryId));
      allow create: if isAuthenticated();
    }

    // ===== EVENTS SYSTEM =====
    match /events/{eventId} {
      allow read: if true;
      allow create, update: if isDispensaryMember(request.resource.data.dispensaryId);
      allow delete: if isDispensaryMember(resource.data.dispensaryId);
    }

    match /dispensaryEvents/{eventId} {
      allow read: if true;
      allow create, update: if isDispensaryMember(request.resource.data.dispensaryId);
      allow delete: if isDispensaryMember(resource.data.dispensaryId);
    }

    // ===== INFLUENCER SYSTEM =====
    match /influencerProfiles/{profileId} {
      allow read: if true;
      allow create, update: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow delete: if isRole('Super Admin');
    }

    match /referralClicks/{clickId} {
      allow create: if true;
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.influencerId || isRole('Super Admin'));
    }

    match /influencerCommissions/{commissionId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.influencerId || isRole('Super Admin'));
      allow write: if false; // Updated by Cloud Functions
    }

    match /influencerAdSelections/{selectionId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.influencerId || 
                     isDispensaryMember(resource.data.dispensaryId));
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.influencerId;
      allow update: if isAuthenticated() && 
                      (request.auth.uid == resource.data.influencerId || 
                       isDispensaryMember(resource.data.dispensaryId));
    }

    // ===== TREEHOUSE SYSTEM =====
    match /treehouse_config/{configId} {
      allow read: if true; // Public read for checkout shipping methods
      allow write: if isRole('Super Admin');
    }

    match /treehouseProducts/{productId} {
      allow read: if true;
      allow create, update: if isAuthenticated() && request.auth.uid == request.resource.data.creatorId;
      allow delete: if isRole('Super Admin');
    }

    match /creator_stores/{storeId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.ownerId;
      allow update: if isAuthenticated() && request.auth.uid == resource.data.ownerId;
      allow delete: if isRole('Super Admin');
    }

    match /creator_earnings/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isRole('Super Admin'));
      allow write: if isRole('Super Admin');
    }

    match /earnings_transactions/{transactionId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.creatorId || isRole('Super Admin'));
      allow write: if isRole('Super Admin');
    }

    match /treehouse_orders/{orderId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.buyerId || 
                     request.auth.uid == resource.data.creatorId);
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == resource.data.creatorId;
    }

    match /creatorDesigns/{designId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // ===== DISPENSARY EARNINGS =====
    match /dispensary_earnings/{userId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == userId || isDispensaryMember(resource.data.dispensaryId));
      allow write: if isRole('Super Admin');
    }

    match /dispensary_transactions/{transactionId} {
      allow read: if isAuthenticated() && 
                    (isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin'));
      allow write: if isRole('Super Admin');
    }

    match /dispensary_payout_requests/{requestId} {
      allow read: if isAuthenticated() && 
                    (isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin'));
      allow create: if isDispensaryMember(request.resource.data.dispensaryId);
      allow update: if isRole('Super Admin');
    }

    // ===== TREEHOUSE CREATOR PAYOUTS =====
    match /payout_requests/{requestId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.creatorId || isRole('Super Admin'));
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.creatorId;
      allow update: if isRole('Super Admin');
    }

    // ===== INFLUENCER PAYOUTS =====
    match /influencerPayouts/{requestId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.influencerId || isRole('Super Admin'));
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.influencerId;
      allow update: if isRole('Super Admin');
    }

    // ===== DRIVER SYSTEM =====
    match /driver_profiles/{driverId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && 
                              (request.auth.uid == driverId || 
                               isDispensaryOwner() || 
                               isDispensaryStaff());
      allow delete: if isRole('Super Admin');
    }

    match /deliveries/{deliveryId} {
      allow read: if isAuthenticated();
      allow create: if isDispensaryOwner() || isDispensaryStaff();
      allow update: if isAuthenticated() && 
                      (request.auth.uid == resource.data.driverId || 
                       isDispensaryMember(resource.data.dispensaryId));
    }

    match /driver_payout_requests/{payoutId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.driverId || 
                     isDispensaryMember(resource.data.dispensaryId));
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.driverId;
      allow update: if isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin');
    }

    // ===== ADVERTISING SYSTEM =====
    match /advertisements/{adId} {
      allow read: if true;
      allow create, update: if isDispensaryMember(request.resource.data.dispensaryId);
      allow delete: if isDispensaryMember(resource.data.dispensaryId);
    }

    match /adImpressions/{impressionId} {
      allow create: if true;
      allow read: if isAuthenticated() && 
                    (isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin'));
    }

    match /adClicks/{clickId} {
      allow create: if true;
      allow read: if isAuthenticated() && 
                    (isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin'));
    }

    match /adConversions/{conversionId} {
      allow create: if true;
      allow read: if isAuthenticated() && 
                    (isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin'));
    }

    match /adDailyAnalytics/{analyticsId} {
      allow read: if isAuthenticated() && 
                    (isDispensaryMember(resource.data.dispensaryId) || isRole('Super Admin'));
      allow write: if false; // Updated by Cloud Functions
    }

    // ===== STICKER SYSTEM =====
    match /stickersets/{setId} {
      allow read: if resource.data.isPublic == true || 
                    (isAuthenticated() && request.auth.uid == resource.data.creatorUid);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.creatorUid;
    }

    // ===== SUBCOLLECTIONS =====
    match /dispensaries/{dispensaryId}/scheduledShares/{shareId} {
      allow read, write: if isDispensaryMember(dispensaryId);
    }

    match /dispensaries/{dispensaryId}/shareAnalytics/{analyticsId} {
      allow read: if isDispensaryMember(dispensaryId);
      allow write: if true; // Allow external tracking
    }
  }
}
