rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======== HELPER FUNCTIONS ========
    function isSuperAdmin() {
      // Allow access if the user has a 'Super Admin' role in their Firestore user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    // ======== GLOBAL ADMIN OVERRIDE ========
    // Super Admins have unconditional read/write access to the entire database.
    // This rule is checked first. If it passes, access is granted immediately.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // ======== COLLECTION-SPECIFIC RULES ========

    // Dispensaries: Public can read approved. Owners can update their own.
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved';
      // Owners can update their own data, but NOT the status field.
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId && !("status" in request.resource.data);
      allow create: if isSuperAdmin(); // Only super admins can create
    }
    
    // Products: Public can read. Owners can manage their own.
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == resource.data.dispensaryId;
    }

    // Users: Can only be read/updated by themselves.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      // Note: Creation is handled by backend functions. Deletion is restricted.
    }

    // Publicly readable utility collections
    match /dispensaryTypes/{typeId} { allow read: if true; }
    match /dispensaryTypeProductCategories/{docId} { allow read: if true; }
    match /creditPackages/{packageId} { allow read: if true; }
    match /stickersets/{setId} { allow read: if resource.data.isPublic == true; }
    match /my-seeded-collection/{strainId} { allow read: if true; }
    match /mushroom_products/{productId} { allow read: if true; }

    // Authenticated users can manage their own requests.
    match /productRequests/{requestId} {
      allow read, create, update: if request.auth != null;
    }
    
    // Authenticated users can report issues.
    match /poolIssues/{issueId} {
      allow read, create: if request.auth != null;
    }
    
    // Users can create their own logs. Only they can read them.
    match /aiInteractionsLog/{logId} {
      allow read, create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
