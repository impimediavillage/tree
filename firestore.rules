
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Super Admin role
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    // Helper function to check if the user is an owner or staff of a specific dispensary
    function isDispensaryMember(dispensaryId) {
      return request.auth.token.dispensaryId == dispensaryId;
    }
    
    // Helper function to check for any authenticated user
    function isSignedIn() {
      return request.auth != null;
    }

    // Publicly readable collections
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow write: if isSuperAdmin() || isDispensaryMember(dispensaryId);
    }

    match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Publicly readable, but writes are restricted
    match /stickersets/{stickerId} {
      allow read: if true;
      allow write: if request.auth.uid == resource.data.creatorUid || isSuperAdmin();
    }

    // User-specific data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isSuperAdmin();
      // Allow dispensary owner to read/write their staff/linked users
      allow read, write: if request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == resource.data.dispensaryId;
    }

    // Dispensary-specific data
    match /products/{productId} {
      allow read: if true;
      // Allow write if user is a member of the dispensary that owns this product
      allow write: if isDispensaryMember(resource.data.dispensaryId) || isSuperAdmin();
    }

    // Collection group queries
    match /{path=**}/products/{productId} {
        // Allow dispensary members to list their own products
        allow list: if isSignedIn() && isDispensaryMember(request.query.filters[0][2]);
    }
    
    match /{path=**}/users/{userId} {
        // Allow Super Admins to list all users
        allow list: if isSuperAdmin();
        // Allow Dispensary Owners to list users for their dispensary
        allow list: if request.auth.token.role == 'DispensaryOwner' && isDispensaryMember(request.query.filters[0][2]);
    }

    // Requests and Issues - complex rules
    match /productRequests/{requestId} {
        // Allow read/write for the involved parties or super admin
        allow read, write: if isSuperAdmin() 
                            || isDispensaryMember(resource.data.productOwnerDispensaryId) 
                            || isDispensaryMember(resource.data.requesterDispensaryId);
    }
    
    match /poolIssues/{issueId} {
        // Allow read/write for the involved parties or super admin
        allow read, write: if isSuperAdmin()
                            || isDispensaryMember(resource.data.reporterDispensaryId)
                            || isDispensaryMember(resource.data.reportedDispensaryId);
    }
    
    // Logs
    match /aiInteractionsLog/{logId} {
        // Only the user who created the log or an admin can read it.
        allow read: if request.auth.uid == resource.data.userId || isSuperAdmin();
        // Users can create their own logs.
        allow create: if request.auth.uid == request.resource.data.userId;
        // No updates or deletes.
        allow update, delete: if false;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
