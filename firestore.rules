rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }

    function isOwner(dispensaryId) {
      return isSignedIn() && request.auth.token.dispensaryId == dispensaryId;
    }
    
    function isOwnerOfResource(resource) {
      return isSignedIn() && request.auth.uid == resource.data.uid;
    }

    // Global rule: Super Admins can do anything
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // Dispensaries:
    // - Public can read approved dispensaries.
    // - Owners can read and update their own dispensary.
    // - Super Admins can do anything (covered by global rule).
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved';
      allow update: if isOwner(dispensaryId);
      allow create: if true;
    }

    // Products:
    // - Public can read products from approved dispensaries.
    // - Owners can manage products for their own dispensary.
    match /dispensaries/{dispensaryId}/products/{productId} {
      allow read: if get(/databases/$(database)/documents/dispensaries/$(dispensaryId)).data.status == 'Approved';
      allow create, update, delete: if isOwner(dispensaryId);
    }
    
    // Users:
    // - Users can read and update their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if true;
    }
    
    // Notifications:
    // - Users can read and update their own notifications.
    match /notifications/{notificationId} {
      allow read, update: if isSignedIn() && request.auth.uid == resource.data.recipientUid;
    }
    
     // Product Requests:
    // - Involved parties (requester/owner) can access the request.
    match /productRequests/{requestId} {
      allow read, update: if isSignedIn() && 
                          (request.auth.uid == resource.data.requesterUid || request.auth.uid == resource.data.productOwnerUid);
      allow create: if isSignedIn();
    }
    
    // Credit Packages: Publicly readable for purchase options
    match /creditPackages/{packageId} {
      allow read: if true;
    }

    // Publicly readable collections
    match /dispensaryTypes/{typeId} {
      allow read: if true;
    }

    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true;
    }
    
    // Default deny all other access
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
