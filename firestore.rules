
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper function to check if a user is a Super Admin
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Helper function to check if a user owns a specific document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to check if a user is a dispensary owner for a given ID
    function isDispensaryOwner(dispensaryId) {
      return request.auth != null && request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }

    // Publicly readable collections (approved dispensaries, active products)
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved';
      // Allow Super Admins to write
      allow write: if isSuperAdmin();
    }

    match /products/{productId} {
      allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
      // Allow Super Admins to write
      allow write: if isSuperAdmin() || isDispensaryOwner(resource.data.dispensaryId);
    }
    
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    match /creditPackages/{packageId} {
        allow read: if resource.data.isActive == true;
        allow write: if isSuperAdmin();
    }

    // Users can read/write their own data. Super Admins can manage all users.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isSuperAdmin();
      allow create: if request.auth != null; // Any authenticated user can create their own profile doc
      allow delete: if isSuperAdmin();
    }

    // Dispensary owners can manage their own staff and linked Leaf Users
    match /users/{userId} {
      allow update: if isDispensaryOwner(resource.data.dispensaryId);
    }

    // Product Requests can be created by Dispensary Owners.
    // They can be read/updated by the involved parties or Super Admins.
    match /productRequests/{requestId} {
      allow read: if isDispensaryOwner(resource.data.requesterDispensaryId) || isDispensaryOwner(resource.data.productOwnerDispensaryId) || isSuperAdmin();
      allow create: if isDispensaryOwner(request.resource.data.requesterDispensaryId);
      allow update: if isDispensaryOwner(resource.data.requesterDispensaryId) || isDispensaryOwner(resource.data.productOwnerDispensaryId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // Pool Issues can be created by Dispensary Owners and managed by Super Admins.
    match /poolIssues/{issueId} {
      allow read: if isDispensaryOwner(resource.data.reporterDispensaryId) || isDispensaryOwner(resource.data.reportedDispensaryId) || isSuperAdmin();
      allow create: if isDispensaryOwner(request.resource.data.reporterDispensaryId);
      allow update, delete: if isSuperAdmin();
    }

    // Notifications are write-only for functions, readable only by the recipient or Super Admin.
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.recipientUid) || isSuperAdmin();
      allow write: if isSuperAdmin(); // Or from a trusted function environment
    }

    // Interaction logs are write-only for functions, readable by the user or Super Admin.
    match /aiInteractionsLog/{logId} {
        allow read: if isOwner(resource.data.userId) || isSuperAdmin();
        allow write: if false; // Should only be written by backend functions
    }
    
    // Scrape/Import logs are for admins only.
    match /scrapeLogs/{logId} {
      allow read, write: if isSuperAdmin();
    }
    match /importsHistory/{historyId} {
      allow read, write: if isSuperAdmin();
    }
    
    // Seed data collections
    match /my-seeded-collection/{strainId} {
      allow read: if true; // Publicly readable for strain finder
      allow update: if request.auth != null; // Allow logged-in users to update image URLs
      allow write: if isSuperAdmin(); // Only admins can add/delete
    }
    
     match /justbrand_catalog/{docId} {
      allow read, write: if isSuperAdmin();
      match /products/{productId} {
          allow read, write: if isSuperAdmin();
      }
    }

    // Super Admins have full access to everything else for management.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
