rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isOwner(dispensaryId) {
      return request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    // --- Dispensaries Collection ---
    match /dispensaries/{dispensaryId} {
      // Anyone can read an approved dispensary profile. Super Admin can read all.
      allow read: if resource.data.status == 'Approved' || isSuperAdmin();
      
      // Only the designated owner or Super Admin can update their dispensary document.
      allow update: if (isOwner(dispensaryId) && request.resource.data.ownerId == request.auth.uid) || isSuperAdmin();
      
      // Anyone can create a new dispensary application.
      allow create: if isSignedIn();
      
      // Only Super Admin can delete a dispensary.
      allow delete: if isSuperAdmin();
    }
    
    // --- Static & Admin-Only Collections ---
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Users can read/update their own profile. Super Admins can manage any user.
      allow read, update: if request.auth.uid == userId || isSuperAdmin();
      
      // A dispensary owner can READ any user document linked to their dispensary.
      allow read: if isOwner(resource.data.dispensaryId);
      
      // A dispensary owner can UPDATE users linked to their dispensary IF they are staff or leaf users.
      allow update: if isOwner(resource.data.dispensaryId) && (resource.data.role == 'DispensaryStaff' || resource.data.role == 'LeafUser');

      // Anyone can sign up. A dispensary owner can create a user for their store.
      allow create: if isSignedIn();
      
      // Only Super Admin can delete users.
      allow delete: if isSuperAdmin();
    }
    
    // --- Products Collection ---
    match /products/{productId} {
      // Anyone can read any product.
      allow read: if true;
      
      // Only the owner of the dispensary can manage their products.
      allow create, update, delete: if isOwner(request.resource.data.dispensaryId) || isSuperAdmin();
    }
    
    // --- Product Requests (Sharing Pool) ---
    match /productRequests/{requestId} {
      allow create: if isSignedIn();
      // Users can read/update requests where they are either the requester or the owner of the product.
      allow read, update: if isOwner(resource.data.productOwnerDispensaryId) || isOwner(resource.data.requesterDispensaryId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // --- Pool Issues ---
    match /poolIssues/{issueId} {
      allow create: if isSignedIn();
      allow read, update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    // --- Notifications & Logs ---
    match /notifications/{notificationId} {
      // Users can manage their own notifications.
      allow read, update, delete: if request.auth.uid == resource.data.recipientUid;
      // Backend functions create notifications.
      allow create: if true; 
    }
    
    match /aiInteractionsLog/{logId} {
        allow create: if true; // Logged by backend function
        allow read: if request.auth.uid == resource.data.userId || isSuperAdmin();
    }

    // --- Sticker Sets ---
    match /stickersets/{setId} {
        allow read: if resource.data.isPublic == true || request.auth.uid == resource.data.creatorUid || isSuperAdmin();
        allow create: if isSignedIn();
        allow update, delete: if request.auth.uid == resource.data.creatorUid || isSuperAdmin();
    }

    // --- Data Seeding / Scraping Collections ---
     match /my-seeded-collection/{strainId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    match /importsHistory/{docId} {
        allow read, write: if isSuperAdmin();
    }

     match /scrapeLogs/{docId} {
        allow read, write: if isSuperAdmin();
    }
    
    match /justbrand_catalog/{docId} {
        allow read, write: if isSuperAdmin();
    }
    
     match /justbrand_catalog/{docId}/products/{productId} {
        allow read, write: if isSuperAdmin();
    }
  }
}
