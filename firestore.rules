rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner(dispensaryId) {
      return request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    // Super Admins have universal read/write access to everything.
    // This rule is checked first and provides a master override.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }
    
    // Dispensaries Collection Rules
    match /dispensaries/{dispensaryId} {
      // Super Admins can do anything (covered by global rule).
      // Owners can update their own dispensary, but not change status or ownerEmail.
      allow update: if isDispensaryOwner(dispensaryId) && request.resource.data.status == resource.data.status && request.resource.data.ownerEmail == resource.data.ownerEmail;
      
      // Anyone can read a dispensary profile IF it is approved.
      // Owners can read their own dispensary regardless of status.
      allow read: if resource.data.status == 'Approved' || isDispensaryOwner(dispensaryId);
      
      // Allow anyone to create a dispensary application.
      allow create: if isSignedIn();
    }

    // Users Collection Rules
    match /users/{userId} {
      // Users can read their own document.
      allow read: if request.auth.uid == userId;
      // Users can update their own document, but cannot change their role or credits.
      allow update: if request.auth.uid == userId && request.resource.data.role == resource.data.role && request.resource.data.credits == resource.data.credits;
    }

    // Products Collection Rules
    match /products/{productId} {
      // Owners can manage products associated with their dispensary.
      allow create, update, delete: if isDispensaryOwner(request.resource.data.dispensaryId);
      // Anyone can read any product.
      allow read: if true;
    }

    // Other Collections (Public Read, Restricted Write)
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /creditPackages/{packageId} {
        allow read: if resource.data.isActive == true;
        allow write: if isSuperAdmin();
    }
    
    match /stickersets/{setId} {
        allow read: if resource.data.isPublic == true;
        allow create, update, delete: if isSignedIn() && request.auth.uid == request.resource.data.creatorUid;
    }

    // Secure by default - deny all other access
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
