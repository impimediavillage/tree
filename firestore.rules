rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to the strain database for any authenticated user
    match /my-seeded-collection/{strainId} {
      allow read: if request.auth != null;
      allow write: if false; // No one can write to this collection from the client
    }
    
    // Allow public read access to dispensary types
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    // Allow public read for approved dispensaries
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved';
      allow create: if request.auth != null; // Allow any authenticated user to apply
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
      
      // Allow the dispensary owner to update their own profile
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerUid; 
    }

    // Products can be read publicly if they belong to an approved dispensary
    match /products/{productId} {
       allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
       allow create: if request.auth.uid == get(/databases/$(database)/documents/dispensaries/$(request.resource.data.dispensaryId)).data.ownerUid;
       allow update, delete: if request.auth.uid == resource.data.ownerUid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    // Users can only read/write their own document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // Allow user creation upon signup
      
      // Super Admins can read/update any user
      allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    // Product requests can be created by authenticated users
    match /productRequests/{requestId} {
      allow create: if request.auth != null;
      // Read/Update allowed by either party involved or a Super Admin
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.requesterUid || request.auth.uid == resource.data.productOwnerUid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin');
    }

    // Pool Issues can be created by authenticated users
    match /poolIssues/{issueId} {
      allow create: if request.auth != null;
      // Only Super Admins can read/update issues
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    // AI Interaction logs can only be created by the user themselves (via cloud function)
    match /aiInteractionsLog/{logId} {
        allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
        allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // Credit packages can be read by anyone, but only managed by Super Admins
    match /creditPackages/{packageId} {
        allow read: if true;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    // Rules for Sticker Sets
    match /stickersets/{setId} {
        // Anyone can read a public sticker set
        allow read: if resource.data.isPublic == true;
        // The creator or a super admin can read/update/delete any set
        allow read, update, delete: if request.auth != null && (request.auth.uid == resource.data.creatorUid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin');
        // Any authenticated user can create a sticker set
        allow create: if request.auth != null;
    }
    
     // Rules for the dispensary type product categories
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true; // Publicly readable for product forms
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

  }
}
