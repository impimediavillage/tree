
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Super Admin role
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    // Helper function to check if the user is an owner or staff of a specific dispensary
    function isDispensaryMember(dispensaryId) {
      return request.auth != null && request.auth.token.dispensaryId == dispensaryId;
    }
    
    // Helper function to check if the user is any kind of dispensary member
    function isAnyDispensaryMember() {
      return request.auth != null && request.auth.token.dispensaryId != null;
    }

    // Helper function to check if a user is viewing their own document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // =====================================================================
    //  Publicly Readable Collections
    // =====================================================================

    // Approved Dispensaries can be read by anyone
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || isDispensaryMember(dispensaryId) || isSuperAdmin();
      allow list: if true; // Allows browsing all approved dispensaries
      allow write: if isSuperAdmin(); // Only super admins can create/update/delete
    }

    // Product categories can be read by anyone
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Credit packages can be read by anyone
    match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Public can read sticker sets
    match /stickersets/{stickerId} {
      allow read: if resource.data.isPublic == true;
      allow write: if isOwner(request.resource.data.creatorUid) || isSuperAdmin();
    }

    // =====================================================================
    //  Authenticated User Collections
    // =====================================================================

    match /users/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin() || isDispensaryMember(resource.data.dispensaryId);
      allow update: if isOwner(userId) || isSuperAdmin();
      allow create: if request.auth != null; // Any authenticated user can create their own doc
      allow delete: if isSuperAdmin();
    }

    // =====================================================================
    //  Dispensary-Scoped Collections
    // =====================================================================

    match /products/{productId} {
      // Anyone can read a product, access is controlled by dispensary status
      allow read: if true; 
      
      // Allow dispensary members to list products matching their dispensaryId
      allow list: if isAnyDispensaryMember();

      // Only a member of the dispensary can write to their products
      allow create, update, delete: if isDispensaryMember(request.resource.data.dispensaryId);
    }
    
    match /productRequests/{requestId} {
      allow read, update: if isDispensaryMember(resource.data.productOwnerDispensaryId) || isDispensaryMember(resource.data.requesterDispensaryId) || isSuperAdmin();
      allow create: if isAnyDispensaryMember();
    }
    
    match /poolIssues/{issueId} {
        allow read: if isDispensaryMember(resource.data.reporterDispensaryId) || isDispensaryMember(resource.data.reportedDispensaryId) || isSuperAdmin();
        allow create: if isAnyDispensaryMember();
        allow update: if isSuperAdmin();
    }
    
    // =====================================================================
    //  Logs - Generally write-only for clients, read-only for admins
    // =====================================================================

    match /aiInteractionsLog/{logId} {
      allow read: if isOwner(resource.data.userId) || isDispensaryMember(resource.data.dispensaryId) || isSuperAdmin();
      // Write access should be handled by secure cloud functions
      allow write: if false; 
    }
    
    match /importsHistory/{logId} {
      allow read: if isSuperAdmin();
      allow write: if false; // Only backend processes can write
    }
  }
}
