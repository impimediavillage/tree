rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read of dispensary data for stores and listings
    match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.role == 'Super Admin' || 
        (request.auth.uid == resource.data.ownerUid && request.auth.token.role == 'DispensaryOwner')
      );
    }

    // Products can be read publicly, but only written by the owning dispensary or admin
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.role == 'Super Admin' ||
        (exists(/databases/$(database)/documents/dispensaries/$(request.resource.data.dispensaryId)) &&
         get(/databases/$(database)/documents/dispensaries/$(request.resource.data.dispensaryId)).data.ownerUid == request.auth.uid)
      );
    }

    // Users can only read/write their own document, Admins can read/write any.
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'Super Admin');
    }
    
    // Allow authenticated users to read from the strain seed data collection
    match /my-seeded-collection/{document=**} {
      allow read: if request.auth != null;
    }

    // Notifications are private to the recipient
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && request.resource.data.recipientUid == request.auth.uid;
    }

    // Product requests can be read/written by the involved parties or an admin
    match /productRequests/{requestId} {
        allow read, write: if request.auth != null && (
            request.auth.token.role == 'Super Admin' ||
            request.resource.data.requesterDispensaryId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId ||
            request.resource.data.productOwnerDispensaryId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId
        );
    }
    
    // Pool Issues can be read/written by admins, and created by authenticated users.
    match /poolIssues/{issueId} {
      allow read, write: if request.auth.token.role == 'Super Admin';
      allow create: if request.auth != null;
    }

    // Credit packages can be read by anyone, but only managed by admins.
    match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Sticker sets can be read publicly if marked as public, but only written by their creator or an admin.
    match /stickersets/{stickerId} {
      allow read: if resource.data.isPublic == true;
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.creatorUid ||
        request.auth.token.role == 'Super Admin'
      );
       // Allow owner to read their own private sets
      allow read: if request.auth != null && request.auth.uid == resource.data.creatorUid;
    }
  }
}
