rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner(dispensaryId) {
      return request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }
    
    function isOwnerOfDispensary(userId, dispensaryId) {
        return get(/databases/$(database)/documents/dispensaries/$(dispensaryId)).data.ownerId == userId;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId || isSuperAdmin() || isDispensaryOwner(get(/databases/$(database)/documents/users/$(userId)).data.dispensaryId);
      allow update: if request.auth.uid == userId || 
                       isSuperAdmin() ||
                       (isDispensaryOwner(request.resource.data.dispensaryId) && (request.resource.data.role == 'DispensaryStaff' || request.resource.data.role == 'LeafUser'));
      allow delete: if isSuperAdmin();
    }

    match /dispensaries/{dispensaryId} {
      allow create: if request.auth != null;
      allow read: if resource.data.status == 'Approved' || isDispensaryOwner(dispensaryId) || isSuperAdmin();
      allow update: if isSuperAdmin() || isDispensaryOwner(dispensaryId);
      allow delete: if isSuperAdmin();
    }

    match /products/{productId} {
      allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
      allow write: if isSuperAdmin() || isDispensaryOwner(request.resource.data.dispensaryId);
    }
    
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaryTypeProductCategories/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /productRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, update: if isSuperAdmin() || 
                           isDispensaryOwner(resource.data.productOwnerDispensaryId) || 
                           isDispensaryOwner(resource.data.requesterDispensaryId);
      allow delete: if isSuperAdmin() || (isDispensaryOwner(resource.data.requesterDispensaryId) && resource.data.requestStatus == 'pending_owner_approval');
    }

    match /poolIssues/{issueId} {
      allow create: if request.auth != null;
      allow read, write: if isSuperAdmin();
    }

    match /aiInteractionsLog/{logId} {
      allow create: if request.auth != null;
      allow read: if isSuperAdmin() || isDispensaryOwner(resource.data.dispensaryId);
    }

    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /notifications/{notificationId} {
      allow read: if request.auth.uid == resource.data.recipientUid || isSuperAdmin();
      allow create, update, delete: if isSuperAdmin(); // Or specific server-side logic
    }
    
    match /stickersets/{setId} {
      allow read: if resource.data.isPublic == true;
      allow create: if request.auth.uid == request.resource.data.creatorUid;
      allow update, delete: if isSuperAdmin() || request.auth.uid == resource.data.creatorUid;
    }
    
    match /my-seeded-collection/{strainId} {
      allow read: if true;
      allow update: if request.auth != null; // Allow any authenticated user to help update images
    }
    
     match /importsHistory/{historyId} {
        allow read, write: if isSuperAdmin();
    }

    match /scrapeLogs/{logId} {
        allow read: if isSuperAdmin();
        allow write: if false; // Only allow writes from the backend
    }
    
    match /justbrand_catalog/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin(); // Or backend only
    }
     match /justbrand_catalog/{docId}/{subcollection}/{productId} {
        allow read: if true;
        allow write: if isSuperAdmin(); // Or backend only
    }
  }
}
