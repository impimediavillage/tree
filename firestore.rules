
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reduce repetition
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner(dispensaryId) {
      return request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }
    
    function isDispensaryStaff(dispensaryId) {
      return request.auth.token.role == 'DispensaryStaff' && request.auth.token.dispensaryId == dispensaryId;
    }

    function isOwnerOrStaff(dispensaryId) {
      return isDispensaryOwner(dispensaryId) || isDispensaryStaff(dispensaryId);
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Users can only read/write their own profile. Admins can read all.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isSuperAdmin();
      allow create: if isSignedIn(); // Allow any signed in user to create their own doc
      allow delete: if isSuperAdmin();
    }

    // Public can read dispensary types. Only admins can modify them.
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Public can read product categories. Only admins can modify them.
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    // Public can read approved dispensaries.
    // Owners can update their own dispensary.
    // Admins can manage all dispensaries.
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || isOwnerOrStaff(dispensaryId) || isSuperAdmin();
      allow create: if isSuperAdmin(); // Only SuperAdmins can create from the backend panel
      allow update: if isOwnerOrStaff(dispensaryId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // Public can read products from approved dispensaries.
    // Owners/Staff can manage products for their own dispensary.
    match /products/{productId} {
      allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved' || isOwnerOrStaff(resource.data.dispensaryId) || isSuperAdmin();
      allow create: if isOwnerOrStaff(request.resource.data.dispensaryId) || isSuperAdmin();
      allow update, delete: if isOwnerOrStaff(resource.data.dispensaryId) || isSuperAdmin();
    }
    
    // Users can read/write their own sticker sets. Public can read public sets.
    match /stickersets/{stickerSetId} {
        allow read: if resource.data.isPublic == true || request.auth.uid == resource.data.creatorUid || isSuperAdmin();
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.creatorUid;
        allow update, delete: if request.auth.uid == resource.data.creatorUid || isSuperAdmin();
    }

    // Users can only read/update product requests they are involved in.
    match /productRequests/{requestId} {
      allow read, update: if (isOwnerOrStaff(resource.data.requesterDispensaryId) || isOwnerOrStaff(resource.data.productOwnerDispensaryId) || isSuperAdmin());
      allow create: if isSignedIn() && isOwnerOrStaff(request.resource.data.requesterDispensaryId);
      allow delete: if isSuperAdmin();
    }

    // Only admins can manage reported issues.
    match /poolIssues/{issueId} {
      allow read, write: if isSuperAdmin();
      allow create: if isSignedIn() && isOwnerOrStaff(request.resource.data.reporterDispensaryId);
    }
    
    // Users can see their own interaction logs. Admins can see all.
    match /aiInteractionsLog/{logId} {
      allow read: if request.auth.uid == resource.data.userId || isSuperAdmin();
      allow create: if isSignedIn(); // Logged by backend function
      allow delete: if isSuperAdmin();
    }

    // Public can read credit packages. Admins can manage them.
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Users can read their own notifications. Admins can see all.
    match /notifications/{notificationId} {
        allow read, update, delete: if request.auth.uid == resource.data.recipientUid || isSuperAdmin();
        allow create: if isSuperAdmin(); // Created by backend functions
    }
    
    // Import history and logs are admin-only
    match /importsHistory/{historyId} {
      allow read, write: if isSuperAdmin();
    }

    match /scrapeLogs/{logId} {
      allow read, write: if isSuperAdmin();
    }

    // Strain data is public read-only for clients, writable by admins.
    match /my-seeded-collection/{strainId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Catalog data is public read-only for clients, writable by admins.
    match /justbrand_catalog/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin();
        match /products/{productId} {
            allow read: if true;
            allow write: if isSuperAdmin();
        }
    }
  }
}
