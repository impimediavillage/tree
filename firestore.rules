rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }
    
    function isOwner(dispensaryId) {
      return request.auth.token.dispensaryId == dispensaryId;
    }

    // Rules for Dispensary Types (Publicly readable)
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Rules for Dispensary Type Product Categories (Readable by any logged-in user)
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if request.auth != null || isSuperAdmin();
        allow write: if isSuperAdmin();
    }
    
    // Rules for Dispensaries
    match /dispensaries/{dispensaryId} {
      // Allow public listing of approved dispensaries, and full list for admins
      allow list: if isSuperAdmin(); // Admins can list all
      allow read: if request.auth != null; // Any authenticated user can read individual approved dispensaries
      
      // Allow anyone to create (submit an application)
      allow create: if true;
      
      // Allow update/delete only by Super Admin
      allow update, delete: if isSuperAdmin();
    }
    
    // Rules for User profiles
    match /users/{userId} {
      allow read: if isSuperAdmin() || request.auth.uid == userId;
      allow write: if isSuperAdmin();
      // Allow users to update their own document, but not change role/status/credits
      allow update: if request.auth.uid == userId 
                    && !('role' in request.resource.data)
                    && !('status' in request.resource.data)
                    && !('credits' in request.resource.data);
    }
    
    // Rules for Products (Publicly readable)
    match /products/{productId} {
      allow read: if true;
      // Only the dispensary owner or super admin can create/update/delete
      allow write: if isSuperAdmin() || isOwner(resource.data.dispensaryId);
    }
    
    // Rules for Product Requests
    match /productRequests/{requestId} {
      allow read, write: if isSuperAdmin() || isOwner(resource.data.productOwnerDispensaryId) || isOwner(resource.data.requesterDispensaryId);
    }
    
    // Rules for Pool Issues
    match /poolIssues/{issueId} {
      allow read, write: if isSuperAdmin() || isOwner(resource.data.reporterDispensaryId) || isOwner(resource.data.reportedDispensaryId);
    }
    
    // Rules for Notifications
    match /notifications/{notificationId} {
      allow read, write: if isSuperAdmin() || request.auth.uid == resource.data.recipientUid;
    }
    
    // Rules for AI Interaction Logs
    match /aiInteractionsLog/{logId} {
      allow read: if isSuperAdmin() || request.auth.uid == resource.data.userId;
      // Writes are handled by secure Cloud Functions
      allow write: if false; 
    }
    
    // Rules for Credit Packages (Publicly readable)
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Rules for Sticker Sets (Publicly readable)
    match /stickersets/{stickerId} {
        allow read: if true;
        allow create, update, delete: if isSuperAdmin() || request.auth.uid == request.resource.data.creatorUid;
    }

    // Rules for seeded strain data (publicly readable)
    match /my-seeded-collection/{strainId} {
        allow read: if true;
        // Writes handled by admin-only cloud function
        allow write: if isSuperAdmin();
    }
    
    // Rules for scraper logs and history (Admin only)
    match /scrapeLogs/{logId} {
        allow read, write: if isSuperAdmin();
    }
    match /importsHistory/{historyId} {
        allow read, write: if isSuperAdmin();
    }
  }
}
