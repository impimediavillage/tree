
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles from their auth token claims
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner() {
      return request.auth.token.role == 'DispensaryOwner';
    }
    
    function isDispensaryStaff() {
      return request.auth.token.role == 'DispensaryStaff';
    }

    function isLeafUser() {
      return request.auth.token.role == 'LeafUser';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isOwnerOfDispensary(dispensaryId) {
      return isDispensaryOwner() && request.auth.token.dispensaryId == dispensaryId;
    }

    // ===== USERS =====
    // Users can read their own document.
    // Super Admins can read/write any user.
    // Dispensary Owners can read users associated with their dispensary.
    match /users/{userId} {
      allow read: if isOwner(userId) || isSuperAdmin() || (isDispensaryOwner() && resource.data.dispensaryId == request.auth.token.dispensaryId);
      allow create: if isSignedIn(); // Allow any signed-in user to create their own doc during signup
      allow update: if isOwner(userId) || isSuperAdmin();
    }

    // ===== DISPENSARIES =====
    // Anyone can read approved dispensaries.
    // Only Super Admins can create/write/delete dispensaries.
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved' || isSuperAdmin() || isOwnerOfDispensary(dispensaryId);
      allow create, update, delete: if isSuperAdmin();
    }
    
    // ===== DISPENSARY TYPES =====
    // Publicly readable by anyone. Only Super Admins can modify.
    match /dispensaryTypes/{typeId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // ===== DISPENSARY TYPE PRODUCT CATEGORIES =====
    // Publicly readable. Only Super Admins can modify.
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }

    // ===== PRODUCTS =====
    // Public can read products from approved dispensaries.
    // Owners can manage products for their own dispensary.
    // Super Admins have full access.
    match /products/{productId} {
      allow read: if isSignedIn() || get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
      allow create, update, delete: if isSuperAdmin() || isOwnerOfDispensary(resource.data.dispensaryId);
    }
    
    // ===== PRODUCT REQUESTS =====
    // Users can only access requests where they are either the owner or the requester.
    match /productRequests/{requestId} {
        allow read, update: if isSuperAdmin() || (isDispensaryOwner() && (resource.data.productOwnerDispensaryId == request.auth.token.dispensaryId || resource.data.requesterDispensaryId == request.auth.token.dispensaryId));
        allow create: if isDispensaryOwner();
        allow delete: if isSuperAdmin();
    }
    
    // ===== POOL ISSUES =====
    // Only Super Admins can read/write issues.
    // Dispensary Owners can create them.
    match /poolIssues/{issueId} {
        allow read, write: if isSuperAdmin();
        allow create: if isDispensaryOwner();
    }
    
    // ===== CREDIT PACKAGES =====
    // Active packages are readable by any signed-in user.
    // Only Super Admins can manage them.
    match /creditPackages/{packageId} {
        allow read: if isSignedIn() && resource.data.isActive == true || isSuperAdmin();
        allow write: if isSuperAdmin();
    }

    // ===== AI INTERACTIONS LOG =====
    // Users can create their own logs.
    // Super Admins can read all logs.
    // Users can read their own logs.
    match /aiInteractionsLog/{logId} {
        allow create: if isSignedIn();
        allow read: if isSuperAdmin() || isOwner(resource.data.userId);
    }
    
    // ===== NOTIFICATIONS =====
    // Users can only read notifications intended for them.
    match /notifications/{notificationId} {
        allow read, update: if isOwner(resource.data.recipientUid);
    }
    
    // ===== STICKER SETS =====
    // Public sets are readable by anyone.
    // Users can manage their own sets. SuperAdmins can manage any.
    match /stickersets/{setId} {
        allow read: if resource.data.isPublic == true || isOwner(resource.data.creatorUid) || isSuperAdmin();
        allow create: if isSignedIn();
        allow update, delete: if isOwner(resource.data.creatorUid) || isSuperAdmin();
    }
    
    // ===== DATA FROM SCRAPERS (Read-only for most) =====
    match /justbrand_catalog/{categoryId} {
        allow read: if true;
        allow write: if isSuperAdmin(); // Only admin can write
        
        match /products/{productId} {
            allow read: if true;
            allow write: if isSuperAdmin();
        }
    }
    
     match /my-seeded-collection/{strainId} {
      allow read: if true;
      allow write: if isSuperAdmin(); 
    }
    
    match /scrapeLogs/{logId} {
        allow read: if isSuperAdmin();
        allow write: if isSuperAdmin();
    }
    
    match /importsHistory/{historyId} {
        allow read: if isSuperAdmin();
        allow write: if isSuperAdmin();
    }
  }
}
