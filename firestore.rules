
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Super Admin role
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    // Helper function to check if a user is the owner of a specific dispensary
    function isOwner(dispensaryId) {
      return request.auth.token.role == 'DispensaryOwner' && request.auth.token.dispensaryId == dispensaryId;
    }

    // Public read for these collections
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    match /stickersets/{setId} {
      allow read: if true;
      // Allow create/update only for the owner or an admin
      allow create, update: if isSuperAdmin() || request.auth.uid == request.resource.data.creatorUid;
      allow delete: if isSuperAdmin() || request.auth.uid == resource.data.creatorUid;
    }

    // Read products is public, write is restricted
    match /products/{productId} {
        allow read: if true;
        allow create: if isOwner(request.resource.data.dispensaryId);
        allow update, delete: if isOwner(resource.data.dispensaryId);
    }

    // Comprehensive rules for dispensaries
    match /dispensaries/{dispensaryId} {
      // Anyone can create a dispensary application
      allow create: if true;

      // Anyone authenticated can view an APPROVED dispensary profile. Super Admin can view all.
      allow read: if isSuperAdmin() || (request.auth != null && get(/databases/$(database)/documents/dispensaries/$(dispensaryId)).data.status == 'Approved');

      // Update is allowed if:
      // 1. User is a Super Admin (unconditional update).
      // 2. User is the owner of THIS dispensary, AND they are NOT trying to change the status or ownerEmail.
      allow update: if isSuperAdmin() || 
                       (isOwner(dispensaryId) && 
                        request.resource.data.status == get(/databases/$(database)/documents/dispensaries/$(dispensaryId)).data.status &&
                        request.resource.data.ownerEmail == get(/databases/$(database)/documents/dispensaries/$(dispensaryId)).data.ownerEmail);

      // Only Super Admin can delete
      allow delete: if isSuperAdmin();
    }

    // Rules for user documents
    match /users/{userId} {
      // Admins can manage any user doc. A user can manage their own doc.
      allow read, write: if isSuperAdmin() || request.auth.uid == userId;

      // Allow function to create user docs (on dispensary approval)
      allow create: if request.auth.token.admin == true || isSuperAdmin();
    }
    
    // Other collections (assuming restricted access for now)
    match /productRequests/{requestId} {
      allow read, write: if isSuperAdmin() || request.auth.uid == resource.data.requesterUid || request.auth.uid == resource.data.productOwnerUid;
      allow create: if request.auth != null;
    }

    match /poolIssues/{issueId} {
       allow read, write: if isSuperAdmin();
       allow create: if request.auth != null;
    }
    
    match /notifications/{notificationId} {
        allow read, write: if isSuperAdmin() || request.auth.uid == resource.data.recipientUid;
        allow create: if isSuperAdmin(); // Or allow functions to create them
    }

    match /aiInteractionsLog/{logId} {
       allow read: if isSuperAdmin() || request.auth.uid == resource.data.userId;
       allow create: if true; // Callable function will handle validation
    }

    // Scraper related collections - admin only
    match /scrapeLogs/{logId} {
      allow read, write: if isSuperAdmin();
    }
    match /importsHistory/{historyId} {
      allow read, write: if isSuperAdmin();
    }
    match /justbrand_catalog/{catId} {
      allow read, write: if isSuperAdmin();
      match /products/{prodId} {
        allow read, write: if isSuperAdmin();
      }
    }
     match /my-seeded-collection/{strainId} {
      allow read: if true;
      allow write: if isSuperAdmin() || request.auth != null; 
    }
    
    match /dispensaryTypeProductCategories/{docId} {
        allow read: if request.auth != null || isSuperAdmin();
        allow write: if isSuperAdmin();
    }
  }
}
