
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner() {
      return request.auth.token.role == 'DispensaryOwner';
    }

    function isOwnerOfDispensary(dispensaryId) {
      return isDispensaryOwner() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }
    
    // PUBLIC ACCESS RULES
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /dispensaries/{dispensaryId} {
        allow read: if resource.data.status == 'Approved'; // Public can only see approved
        allow list: if true; // Allows browsing types
        allow get: if true; // Allow getting any for admin/internal use
        
        // Admin can do anything
        allow write: if isSuperAdmin();
        
        // Owner can update their own
        allow update: if isOwnerOfDispensary(dispensaryId);
    }
    
    // Authenticated User Rules
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSuperAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    
    match /products/{productId} {
      // Anyone can read approved products from approved dispensaries
      allow read: if get(/databases/$(database)/documents/dispensaries/$(resource.data.dispensaryId)).data.status == 'Approved';
      allow write: if isOwnerOfDispensary(resource.data.dispensaryId) || isSuperAdmin();
    }
    
    match /productRequests/{requestId} {
      allow read, update: if request.auth.uid != null && (
                            isOwnerOfDispensary(resource.data.productOwnerDispensaryId) ||
                            isOwnerOfDispensary(resource.data.requesterDispensaryId) ||
                            isSuperAdmin()
                          );
      allow create: if request.auth.uid != null;
    }
    
    match /poolIssues/{issueId} {
        allow read, write: if isSuperAdmin();
        allow create: if isDispensaryOwner();
    }
    
    match /notifications/{notificationId} {
        allow read, update, delete: if request.auth.uid == resource.data.recipientUid;
        allow create: if isSuperAdmin() || isDispensaryOwner();
    }
    
    match /creditPackages/{packageId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /aiInteractionsLog/{logId} {
      allow read: if request.auth.uid == resource.data.userId || isSuperAdmin();
      allow create: if request.auth.uid != null;
    }

    match /stickersets/{stickerSetId} {
      allow read: if true; // Publicly readable if they want to share
      
      // Allow create for any authenticated user
      allow create: if request.auth.uid != null;
      
      // Allow update/delete only by the creator or a super admin
      allow update, delete: if request.auth.uid == resource.data.creatorUid || isSuperAdmin();
    }

    // Public strain data
    match /my-seeded-collection/{strainId} {
      allow read: if true;
      allow write: if isSuperAdmin(); // Only admin can modify seed data
    }

    // By default, deny all other reads/writes that haven't been matched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
