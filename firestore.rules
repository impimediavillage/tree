
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserData().role == 'Super Admin';
    }

    function isOwner(dispensaryId) {
      return isSignedIn() && getUserData().dispensaryId == dispensaryId;
    }
    
    // GLOBAL READABLE
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      allow create, update, delete: if isSuperAdmin();
    }
    match /creditPackages/{packageId} {
        allow read: if true;
        allow create, update, delete: if isSuperAdmin();
    }
     match /my-seeded-collection/{docId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // AUTHENTICATED READABLE
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }
    match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isOwner(dispensaryId) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }
    match /products/{productId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.dispensaryId);
      allow update: if isOwner(resource.data.dispensaryId);
      allow delete: if isOwner(resource.data.dispensaryId) || isSuperAdmin();
    }
    
    // USER-SPECIFIC & ROLE-BASED ACCESS
    match /users/{userId} {
      allow read: if isUser(userId) || isSuperAdmin() || isOwner(resource.data.dispensaryId);
      allow create: if isUser(userId); // A user can create their own document on signup
      allow update: if isUser(userId) || isSuperAdmin() || isOwner(request.resource.data.dispensaryId);
      allow delete: if isSuperAdmin();
    }

    match /notifications/{notificationId} {
      allow read, update: if isUser(resource.data.recipientUid);
      allow create: if isSignedIn(); 
    }

    match /aiInteractionsLog/{logId} {
        allow read, create: if isUser(resource.data.userId);
    }
    
    match /productRequests/{requestId} {
        allow read, update: if isOwner(resource.data.productOwnerDispensaryId) || isOwner(resource.data.requesterDispensaryId);
        allow create: if isOwner(request.resource.data.requesterDispensaryId);
    }

    match /poolIssues/{issueId} {
        allow read, update: if isSuperAdmin();
        allow create: if isSignedIn();
    }
  }
}
