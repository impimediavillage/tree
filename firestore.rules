rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default to secure: deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/update their own profiles. Admins can do anything.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create, list, delete: if request.auth.token.role == 'Super Admin';
    }

    // Public read for dispensaries, write restricted to Super Admins
    match /dispensaries/{dispensaryId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role == 'Super Admin';
    }

    // Public read for dispensary types, write restricted to Super Admins
    match /dispensaryTypes/{typeId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.role == 'Super Admin';
    }

    // Authenticated users can read product categories
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'Super Admin';
    }

    // Credit packages can be read by any authenticated user, written only by admins
    match /creditPackages/{packageId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'Super Admin';
    }
    
    // AI interaction logs can only be created by the user themselves.
    match /aiInteractionsLog/{logId} {
        allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Rule for all product collections (ending in _products)
    match /{collectionId}_products/{productId} {
      allow read: if request.auth != null;
      allow write: if (request.auth.token.role == 'DispensaryOwner' || request.auth.token.role == 'DispensaryStaff')
                    && request.resource.data.dispensaryId == request.auth.token.dispensaryId;
    }
    
    // Fallback for the main 'products' collection
    match /products/{productId} {
       allow read: if request.auth != null;
       allow write: if (request.auth.token.role == 'DispensaryOwner' || request.auth.token.role == 'DispensaryStaff')
                    && request.resource.data.dispensaryId == request.auth.token.dispensaryId;
    }

    // Authenticated users can read sticker sets
    match /stickersets/{stickerId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.creatorUid;
      allow update, delete: if request.auth.uid == resource.data.creatorUid;
    }
    
  }
}
