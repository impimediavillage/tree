rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }
    
    function isDispensaryOwner() {
      return request.auth.token.role == 'DispensaryOwner';
    }

    function isOwnerOfDispensary(dispensaryId) {
      return isDispensaryOwner() && request.auth.token.dispensaryId == dispensaryId;
    }

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isOwnerOfDoc() {
      return request.auth.uid == resource.data.uid;
    }

    // Global catch-all for Super Admin
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // Dispensaries Collection
    match /dispensaries/{dispensaryId} {
      allow read: if resource.data.status == 'Approved';
      allow create: if true; // Public can apply
      allow update: if isOwnerOfDispensary(dispensaryId);
    }

    // Users Collection
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if true; // Public can sign up
    }

    // Products Collection
    match /products/{productId} {
      allow read: if true; // Public can view all products
      allow create, update, delete: if isOwnerOfDispensary(request.resource.data.dispensaryId);
    }
    
    // Product Requests Collection
    match /productRequests/{requestId} {
      allow read, update: if isOwnerOfDispensary(resource.data.productOwnerDispensaryId) || isOwnerOfDispensary(resource.data.requesterDispensaryId);
      allow create: if isDispensaryOwner();
    }

    // Notifications Collection
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth.uid == resource.data.recipientUid;
    }

    // Publicly Readable Collections
    match /dispensaryTypes/{typeId} {
      allow read: if true;
    }
    
    match /creditPackages/{packageId} {
      allow read: if resource.data.isActive == true;
    }

    // Secure Collections (only accessible via Cloud Functions or Admin SDK)
    match /poolIssues/{issueId} {
      allow read, write: if false; 
    }
    match /aiInteractionsLog/{logId} {
      allow read, write: if false; 
    }
    match /stickersets/{setId} {
      allow read: if resource.data.isPublic == true;
      allow create: if isUserAuthenticated();
      allow update, delete: if request.auth.uid == resource.data.creatorUid;
    }
    match /dispensaryTypeProductCategories/{docId} {
      allow read: if true; // Readable by all for product forms
    }
    match /my-seeded-collection/{strainId} {
      allow read: if true;
    }
  }
}
