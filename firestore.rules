rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }

    function isDispensaryOwner() {
      return request.auth.token.role == 'DispensaryOwner';
    }

    function isOwnerOfDispensary(dispensaryId) {
      return request.auth.token.dispensaryId == dispensaryId;
    }

    function isOwnerOfDoc(doc) {
      return request.auth.uid == doc.uid;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/write their own profile, Admins can manage all users.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId || isSuperAdmin();
      allow create: if request.auth != null; // Any authenticated user can create their own profile doc
    }
    
    // Dispensary Owners can manage staff/users linked to their dispensary.
    match /users/{userId} {
       allow list: if isSuperAdmin() || isOwnerOfDispensary(resource.data.dispensaryId);
       allow get, update: if isOwnerOfDispensary(resource.data.dispensaryId);
    }
    
    // Public read for approved dispensaries. Only owners or admins can modify.
    match /dispensaries/{dispensaryId} {
      allow get, list: if resource.data.status == 'Approved' || isSuperAdmin() || isOwnerOfDispensary(dispensaryId);
      allow create: if request.auth != null; // Allow authenticated users to apply.
      allow update, delete: if isSuperAdmin() || isOwnerOfDispensary(dispensaryId);
    }

    // Public can read dispensary types. Admins can manage them.
    match /dispensaryTypes/{typeId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin();
    }
    
    // Public can read product categories. Admins can manage them.
    match /dispensaryTypeProductCategories/{docId} {
        allow get, list: if true;
        allow create, update, delete: if isSuperAdmin();
    }
    
    // Products can be read by public. Only owners or admins can modify.
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin() || isOwnerOfDispensary(request.resource.data.dispensaryId);
    }

    // Product requests can only be accessed by participants or admins.
    match /productRequests/{requestId} {
      allow get, list, create, update: if isSuperAdmin() || isOwnerOfDispensary(resource.data.requesterDispensaryId) || isOwnerOfDispensary(resource.data.productOwnerDispensaryId);
    }

    // Pool Issues can only be accessed by participants or admins.
    match /poolIssues/{issueId} {
        allow get, list, create, update: if isSuperAdmin() || isOwnerOfDispensary(resource.data.reporterDispensaryId) || isOwnerOfDispensary(resource.data.reportedDispensaryId);
    }

    // Users can read/write their own notifications. Admins can read all.
    match /notifications/{notificationId} {
      allow get, list, update, delete: if isSuperAdmin() || request.auth.uid == resource.data.recipientUid;
      allow create: if request.auth != null; // Function will set recipient
    }

    // Credit packages can be read by public. Admins can manage.
    match /creditPackages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin();
    }

    // AI interaction logs are write-only for authenticated users, readable by owner/admin.
    match /aiInteractionsLog/{logId} {
      allow create: if request.auth != null;
      allow get, list: if isSuperAdmin() || request.auth.uid == resource.data.userId;
    }

    // Seed data should be readable by all, writable only by admin.
    match /my-seeded-collection/{strainId} {
        allow get, list: if true;
        allow create, update, delete: if isSuperAdmin();
    }
    
    // Logs for scraping, only admin access.
    match /scrapeLogs/{logId} {
        allow get, list, create, update: if isSuperAdmin();
    }
    match /importsHistory/{logId} {
        allow get, list, create, update: if isSuperAdmin();
    }
    match /justbrand_catalog/{docId} {
        allow get, list, create, update, delete: if isSuperAdmin();
    }
    match /justbrand_catalog/{docId}/{subCollection}/{productId} {
        allow get, list, create, update, delete: if isSuperAdmin();
    }
    
    // Sticker sets can be read by public if marked public. Only owner/admin can write.
    match /stickersets/{setId} {
        allow get: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.creatorUid) || isSuperAdmin();
        allow list: if resource.data.isPublic == true || isSuperAdmin(); // Listing only public or for admin
        allow create: if request.auth != null;
        allow update, delete: if isSuperAdmin() || (request.auth != null && request.auth.uid == resource.data.creatorUid);
    }
  }
}
