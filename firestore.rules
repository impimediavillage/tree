
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is the owner of a specific dispensary
    function isDispensaryOwner(dispensaryId) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId == dispensaryId;
    }

    // Products can be read by anyone, but only created, updated, or deleted
    // by the owner of the dispensary the product belongs to.
    match /products/{productId} {
      allow read: if true;
      allow create: if isDispensaryOwner(request.resource.data.dispensaryId);
      allow update, delete: if isDispensaryOwner(resource.data.dispensaryId);
    }

    // Basic rules for other collections (can be expanded as needed)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId; // Users can only edit their own doc
    }
    
    match /dispensaries/{dispensaryId} {
      // Allow anyone to submit a dispensary application
      allow create: if true; 
      allow read: if true;
      // Only Super Admins should update/delete dispensary records
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    match /dispensaryTypes/{typeId} {
      allow read: if true;
      // Only Super Admins can manage types
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    match /dispensaryTypeProductCategories/{docId} {
       allow read: if true;
       allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    match /productRequests/{requestId} {
       // Allow authenticated users to create requests
       allow create: if request.auth != null;
       // Allow owner or requester to read/update
       allow read, update: if request.auth != null && (isDispensaryOwner(resource.data.productOwnerDispensaryId) || isDispensaryOwner(resource.data.requesterDispensaryId));
    }
    
    match /poolIssues/{issueId} {
        allow create: if request.auth != null; // Authenticated users can create issues
        // Only super admins can read/update issues
        allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }
    
    match /notifications/{notificationId} {
        // Users can only read/update notifications intended for them
        allow read, update: if request.auth != null && resource.data.recipientUid == request.auth.uid;
    }
    
    match /creditPackages/{packageId} {
        allow read: if true;
        // Only super admins can manage credit packages
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
