rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======== HELPER FUNCTIONS ========
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // Check for the custom claim 'role' on the user's auth token.
      // This is the most secure and efficient way to check for admin privileges.
      return request.auth.token.role == 'Super Admin';
    }

    // ======== GLOBAL ADMIN OVERRIDE ========
    // This rule grants Super Admins unconditional read/write access to the entire database.
    // It is evaluated first and provides the necessary master key.
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // ======== COLLECTION-SPECIFIC RULES (FOR NON-ADMINS) ========

    match /dispensaries/{dispensaryId} {
      // Public can read only approved dispensaries.
      allow read: if resource.data.status == 'Approved';
      // The Super Admin write rule is handled by the global override.
      // Owners can update their own dispensary, but cannot change the status.
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId && request.resource.data.status == resource.data.status;
      // No one but an admin can create or delete.
      allow create, delete: if false;
    }

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      // Create is handled by backend functions. List/Delete by admin override.
      allow create, delete, list: if false;
    }
    
    match /dispensaryTypes/{typeId} {
      allow read: if true;
      // Only admins can write.
      allow write: if false;
    }

    match /products/{productId} {
      allow read: if true;
      allow create, update: if isSignedIn() && request.resource.data.dispensaryId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId;
      allow delete: if isSignedIn() && resource.data.dispensaryId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dispensaryId;
    }
    
    match /productRequests/{requestId} {
      allow read, create, update: if isSignedIn();
      allow delete: if false; 
    }
    
    match /poolIssues/{issueId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false;
    }
    
    match /creditPackages/{packageId} {
        allow read: if true;
        allow write: if false; // Only admins
    }
    
     match /stickersets/{setId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if request.auth.uid == resource.data.creatorUid;
    }

    match /aiInteractionsLog/{logId} {
        allow read: if request.auth.uid == resource.data.userId;
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update, delete: if false;
    }
    
    // Lock down seeded data collections. Read-only for users.
    match /my-seeded-collection/{docId} {
        allow read: if true;
        allow write: if false; 
    }
    match /justbrand_catalog/{docId} {
        allow read: if true;
        allow write: if false;
    }
     match /justbrand_catalog/{docId}/{subcollection}/{subdocId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
