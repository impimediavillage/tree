
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files.
    // This is generally safe for non-sensitive public assets like product images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access. Only authenticated users can write.
    // Further restrictions can be added based on path, e.g., only allowing a user
    // to write to a path that includes their UID.
    match /products/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /lab-reports/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /dispensary-type-assets/{folder}/{fileName} {
      allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }

    match /stickersets/{userId}/{fileName} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
