rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files so they can be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own designated folders.
    // This rule is more specific and secure.
    match /products/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /lab-reports/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /stickersets/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /dispensary-type-assets/{folder}/{fileName} {
      allow write: if request.auth != null; // Allow any authenticated user (admins)
    }
  }
}
