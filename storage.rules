
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
  
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // User Profile Pictures
    match /users/{userId}/{allPaths=**} {
      allow write: if isOwner(userId);
    }

    // Product Images
    // Only authenticated users can upload to a folder matching their UID
    match /products/{userId}/{allPaths=**} {
      allow write: if isOwner(userId);
    }
    
    // Lab Reports
    match /lab-reports/{userId}/{allPaths=**} {
      allow write: if isOwner(userId);
    }

    // Dispensary Type Assets (Admin only)
    match /dispensary-type-assets/{allPaths=**} {
        allow write: if request.auth.token.role == 'Super Admin';
    }
    
    // Sticker Sets
    match /stickersets/{userId}/{allPaths=**} {
       allow write: if isOwner(userId);
    }
  }
}
