
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for Super Admin role
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Helper function to check if the user is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Product Images ---
    // Path: /products/{userId}/{imageName}
    // Anyone can read product images.
    // Only the authenticated user (Dispensary Owner) can write to their own folder.
    match /products/{userId}/{imageName} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // --- Lab Reports ---
    // Path: /lab-reports/{userId}/{fileName}
    // Only the owner of the lab report can read it.
    // Only the owner can write it.
    match /lab-reports/{userId}/{fileName} {
      allow read, write: if isOwner(userId);
    }

    // --- Dispensary Type Assets (Icons, Banners) ---
    // Path: /dispensary-type-assets/{assetType}/{fileName}
    // Anyone can read these public assets.
    // Only Super Admins can write/upload new assets.
    match /dispensary-type-assets/{assetType}/{fileName} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // --- Sticker Set Assets ---
    // Path: /stickersets/{userId}/{fileName}
    // Anyone can read these public assets.
    // Only the creator can write/upload new assets.
    match /stickersets/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
