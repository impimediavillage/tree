rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for Super Admin role via custom claims
    function isSuperAdmin() {
      return request.auth.token.role == 'Super Admin';
    }
    
    // Allow anyone to read public assets like dispensary type icons and images
    match /dispensary-type-assets/{allPaths=**} {
      allow read: if true;
    }

    // Allow anyone to read product images and sticker set assets
    match /products/{userId}/{allPaths=**} {
      allow read: if true;
    }
    match /stickersets/{userId}/{allPaths=**} {
        allow read: if true;
    }

    // Users can only manage their own profile pictures in a folder named after their UID.
    match /user-profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only upload their own lab reports. Reading should be restricted.
    match /lab-reports/{userId}/{fileName} {
        allow create: if request.auth != null && request.auth.uid == userId;
        // Add read rule if lab reports should be publicly viewable, otherwise they are private
        // allow read: if true; 
    }
    
    // By default, deny all other reads and writes
    match /{allPaths=**} {
      allow read, write: if isSuperAdmin(); // Super Admin can access everything
    }
  }
}
