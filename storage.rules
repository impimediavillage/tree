
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Public read for dispensary type assets, product images, and sticker set assets
    match /dispensary-type-assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Allow writes only to authenticated users (admins)
    }

    match /products/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /stickersets/{userId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Lab reports can only be accessed by the owner/staff of the dispensary or super admin.
    // This requires more complex rules, potentially storing dispensaryId in metadata.
    // For now, restrict to authenticated users who uploaded them.
    match /lab-reports/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId; // Simplistic rule, needs refinement if others need access
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // User profile pictures: allow public read, but only the user can write.
    match /users/{userId}/profilePicture/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
