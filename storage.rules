rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read on all files by default for simplicity.
    // You might want to tighten this later.
    match /{allPaths=**} {
      allow read;
    }

    // Only Super Admins can write to the assets folder for dispensary types.
    match /dispensary-type-assets/{allPaths=**} {
      allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // This is the corrected rule for user sticker sets.
    // It allows any authenticated user to write to a folder that matches their UID.
    match /stickersets/{userId}/{fileName=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
