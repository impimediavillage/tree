
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is common for images that need to be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to specific folders.
    // This allows product images, lab reports, and sticker sets to be uploaded.
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /lab-reports/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /stickersets/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow writes to dispensary type assets only by an admin.
    // This is a placeholder and might need adjustment based on how Super Admins are identified in rules.
    match /dispensary-type-assets/{allPaths=**} {
       allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
  }
}
