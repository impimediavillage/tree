
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access on all files. This is useful for things like
    // product images that need to be displayed to all users.
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only by authenticated users. This is a secure default.
    // Your application logic should handle ensuring users can only write to
    // appropriate paths (e.g., their own product images).
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
