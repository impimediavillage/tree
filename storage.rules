
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all reads and writes
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Allow public read access to all files.
    // This is simple and effective for public assets like product images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Secure write access. Only authenticated users can upload files.
    // You can add more specific rules, e.g., based on file size or path.
    match /products/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /lab-reports/{userId}/{fileName} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /dispensary-type-assets/{path}/{fileName} {
      allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
    
     match /stickersets/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // General user uploads (e.g., profile pictures)
    match /user-uploads/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
