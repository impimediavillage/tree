rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if a user has a specific role
    function hasRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Public read for dispensary type assets (icons, images)
    match /dispensary-type-assets/{allPaths=**} {
      allow read: if true;
    }
    
    // Public read for product images
    match /products/{userId}/{imageName} {
      allow read: if true;
    }

    // Users can only write to their own designated folder within /products
    // and can only upload files smaller than 5MB.
    match /products/{userId}/{imageName} {
      allow write: if request.auth != null && request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
    
    // Lab reports can be written by the user who owns the path
    match /lab-reports/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024 && // 2MB limit
                      (request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf');
    }

    // Allow read access to lab reports for authenticated users (or make more specific if needed)
    match /lab-reports/{userId}/{fileName} {
      allow read: if request.auth != null;
    }

    // Sticker sets can be read publicly
    match /stickersets/{allPaths=**} {
      allow read: if true;
    }

    // Authenticated users can write to their own sticker set folder
    match /stickersets/{userId}/{fileName} {
       allow write: if request.auth != null && request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }

  }
}
