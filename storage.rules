
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files by default.
    // This is necessary for product images, dispensary type icons etc. to be displayed.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access.
    
    // Allow users to upload to their own user-specific folders (e.g. for profile pictures)
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow dispensary admins to upload product images, lab reports etc.
    // Here we check against the user's custom claim, which should be set by a function.
    // For simplicity and to avoid function dependency, we check if they are authenticated.
    // A more robust rule would check a custom claim or Firestore document.
    match /products/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /lab-reports/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow Super Admins to write to dispensary type assets folder
    // Using custom claims (token) instead of Firestore get() for better performance
    match /dispensary-type-assets/{allPaths=**} {
        allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Allow users to upload their own sticker set assets
     match /stickersets/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload images for advisor chat (with size limit enforced in client)
    match /advisor-chats/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Allow dispensary admins to upload event flyers
    match /events/{dispensaryId}/{allPaths=**} {
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Allow dispensary owners and staff to upload branding images (logo, cover, icon)
    // Using custom claims for performance (no Firestore reads needed)
    match /dispensaries/{dispensaryId}/branding/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.token.dispensaryId == dispensaryId
                   && (request.auth.token.role == 'DispensaryOwner' || request.auth.token.role == 'DispensaryStaff')
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Driver document uploads (license, ID, vehicle photo)
    // Dispensary owners/staff can upload for their dispensary's drivers
    match /drivers/{dispensaryId}/{userId}/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.token.dispensaryId == dispensaryId
                   && (request.auth.token.role == 'DispensaryOwner' || request.auth.token.role == 'DispensaryStaff')
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      
      // Drivers can upload their own documents
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

  }
}
