rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function for auth check
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function for Super Admin check
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }

    // Allow public read access to all files by default.
    // This simplifies serving images for products, dispensary types, etc., to all users.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Secure write access. Only authenticated users can upload files.
    // We can add more specific rules for paths if needed.
    // Example: allow write: if isSignedIn() && request.resource.size < 5 * 1024 * 1024;
    
    // Allow any authenticated user to write to the 'products' folder.
    // Further security (e.g., matching dispensaryId) should be handled by your backend code.
    match /products/{userId}/{fileName} {
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Allow any authenticated user to write to 'lab-reports'.
    match /lab-reports/{userId}/{fileName} {
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to write to 'stickersets'.
    match /stickersets/{userId}/{fileName} {
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Only Super Admins can write to 'dispensary-type-assets'.
    match /dispensary-type-assets/{folder}/{fileName} {
      allow write: if isSuperAdmin();
    }
  }
}
