
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access to product images and dispensary assets
    match /products/{userId}/{allPaths=**} {
      allow get: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /dispensary-type-assets/{allPaths=**} {
      allow get: if true;
      allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Allow authenticated users to upload their own lab reports
    match /lab-reports/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload their own sticker set assets
    match /stickersets/{userId}/{allPaths=**} {
       allow get: if true; // Publicly readable
       allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
